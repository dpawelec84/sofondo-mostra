---
/**
 * ShowcaseLayout - A special layout for showcase demo sites
 * Includes a floating close button to return to the parent showcase page
 * Uses native scrolling for simplicity and compatibility
 * Includes page entrance fade-in animation
 *
 * When a recipe prop is provided, injects CSS variables from that recipe's theme
 */

import "../styles/global.css";
import { getRecipe, getThemeCssVars, recipeToConfig } from '../utils/recipe-context';

interface Props {
  title: string;
  returnUrl?: string;
  recipe?: string; // Recipe name to load theme from
}

const { title, returnUrl = '/showcase/', recipe: recipeName } = Astro.props;

// Get recipe config if specified
const recipe = recipeName ? getRecipe(recipeName) : undefined;
const themeCssVars = recipe ? getThemeCssVars(recipe.theme) : '';
const config = recipe ? recipeToConfig(recipe) : undefined;

// Expose config for child components via Astro.locals
if (config) {
  (Astro.locals as any).showcaseConfig = config;
}
---

<!doctype html>
<html lang="en" data-theme={recipe?.isDark ? 'dark' : 'light'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    {/* Load recipe fonts if specified */}
    {recipe?.fonts?.google && (
      <>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href={recipe.fonts.google} rel="stylesheet" />
      </>
    )}

    <slot name="head" />

    {/* Inject recipe theme variables AFTER global.css with higher specificity */}
    {themeCssVars && (
      <style set:html={`
        html[data-theme="dark"], html[data-theme="light"] {
          ${themeCssVars}
        }
      `} />
    )}
  </head>
  <body class="showcase-page-enter">
    <a href={returnUrl} class="showcase-close-btn" title="Close preview and return to Showcase">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </a>
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  /* Reset default margins */
  *, *::before, *::after {
    box-sizing: border-box;
  }

  html, body {
    margin: 0;
    padding: 0;
  }

  /* Ensure smooth scrolling on showcase pages */
  html {
    scroll-behavior: smooth;
  }

  /* Page entrance animation - starts visible, brief subtle fade */
  @keyframes showcasePageFadeIn {
    from {
      opacity: 0.85;
    }
    to {
      opacity: 1;
    }
  }

  .showcase-page-enter {
    animation: showcasePageFadeIn 0.2s ease-out forwards;
  }

  .showcase-close-btn {
    position: fixed;
    top: 1rem;
    right: 1rem;
    z-index: 10000;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(8px);
    border-radius: 50%;
    color: white;
    text-decoration: none;
    transition: all 0.2s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .showcase-close-btn:hover {
    background: rgba(0, 0, 0, 0.9);
    transform: scale(1.1);
  }

  .showcase-close-btn svg {
    width: 20px;
    height: 20px;
  }

  /* Main content wrapper - matches Layout.astro */
  main {
    padding-top: var(--header-height);
    min-height: 100vh;
    position: relative;
    z-index: 1;
  }
</style>
