---
/**
 * ShowcaseFooter - Footer component for showcase demo sites
 * Accepts recipe config as a prop instead of reading from site.ts
 * This allows showcases to display footers that match their recipe theme
 */

import { Heart } from "lucide-react";
import ShowcaseLogo from "./ShowcaseLogo.astro";
import type { Recipe } from "../recipes/index";

interface Props {
  recipe: Recipe;
  links?: { label: string; href: string }[];
}

const { recipe, links = [] } = Astro.props;

const footerLayout = recipe.footerLayout || 'flex-row';
const showCopyright = recipe.showCopyright ?? true;
const showTemplateCredit = recipe.showTemplateCredit ?? true;
const copyrightSuffix = recipe.copyrightSuffix || "";
---

<footer class="footer" data-layout={footerLayout}>
  <div class="container">
    {/* Flex Row Layout (agency style) - logo+links left, copyright right */}
    {footerLayout === 'flex-row' && (
      <>
        <div class="footer-flex-row">
          <div class="footer-left">
            <a href="#" class="footer-logo-link">
              <ShowcaseLogo recipe={recipe} />
            </a>
            {links.length > 0 && (
              <nav class="footer-nav">
                {links.map((link) => (
                  <a href={link.href}>{link.label}</a>
                ))}
              </nav>
            )}
          </div>
          {showCopyright && (
            <div class="footer-right">
              <p class="footer-copyright">&copy; {new Date().getFullYear()} {recipe.name}. All rights reserved.{copyrightSuffix && ` ${copyrightSuffix}`}</p>
            </div>
          )}
        </div>
        {showTemplateCredit && (
          <p class="footer-template-credit footer-template-credit-flex">
            Mostra Astro template built with <Heart size={12} className="heart-icon" /> by <a href="https://sofondo.com" target="_blank" rel="noopener">Sofondo</a>
          </p>
        )}
      </>
    )}

    {/* Flex Sections Layout (product, app, newsletter style) - brand left, links right */}
    {footerLayout === 'flex-sections' && (
      <>
        <div class="footer-content">
          <div class="footer-brand-section">
            <a href="#" class="footer-logo-link">
              <ShowcaseLogo recipe={recipe} />
            </a>
            {recipe.tagline && (
              <p class="footer-tagline">{recipe.tagline}</p>
            )}
          </div>
          {links.length > 0 && (
            <nav class="footer-links-section">
              {links.map((link) => (
                <a href={link.href}>{link.label}</a>
              ))}
            </nav>
          )}
        </div>
        {showCopyright && (
          <div class="footer-bottom-sections">
            <p class="footer-copyright">&copy; {new Date().getFullYear()} {recipe.name}. All rights reserved.{copyrightSuffix && ` ${copyrightSuffix}`}</p>
          </div>
        )}
        {showTemplateCredit && (
          <p class="footer-template-credit footer-template-credit-sections">
            Mostra Astro template built with <Heart size={12} className="heart-icon" /> by <a href="https://sofondo.com" target="_blank" rel="noopener">Sofondo</a>
          </p>
        )}
      </>
    )}

    {/* Grid 4-Column Layout (corporate, startup, nonprofit style) */}
    {footerLayout === 'grid-4col' && (
      <>
        <div class="footer-grid">
          <div class="footer-column footer-brand">
            <a href="#" class="footer-logo-link">
              <ShowcaseLogo recipe={recipe} />
            </a>
            {recipe.tagline && (
              <p class="footer-tagline">{recipe.tagline}</p>
            )}
          </div>

          {/* Render link groups if provided */}
          {recipe.linkGroups && recipe.linkGroups.length > 0 && (
            recipe.linkGroups.map((group) => (
              <div class="footer-column">
                <h3 class="footer-heading">{group.heading}</h3>
                <ul class="footer-links">
                  {group.links.map((link) => (
                    <li>
                      <a href={link.href}>{link.label}</a>
                    </li>
                  ))}
                </ul>
              </div>
            ))
          )}
        </div>

        <div class="footer-bottom">
          <div class="footer-bottom-content">
            {showCopyright && (
              <p class="footer-copyright">&copy; {new Date().getFullYear()} {recipe.name}. All rights reserved.{copyrightSuffix && ` ${copyrightSuffix}`}</p>
            )}
          </div>

          {showTemplateCredit && (
            <p class="footer-template-credit">
              Mostra Astro template built with <Heart size={12} className="heart-icon" /> by <a href="https://sofondo.com" target="_blank" rel="noopener">Sofondo</a>
            </p>
          )}
        </div>
      </>
    )}
  </div>
</footer>

<style>
  .footer {
    padding: 4rem 0 2rem;
    background: var(--footer-bg, var(--bg-light));
    color: var(--footer-text, var(--text-secondary));
    border-top: 1px solid var(--footer-border, var(--border-color));
  }

  .container {
    max-width: var(--footer-max-width, 1200px);
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* ========================================
     Grid 4-Column Layout (corporate, startup, nonprofit)
     ======================================== */
  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
    text-align: left;
  }

  .footer-column {
    display: flex;
    flex-direction: column;
  }

  .footer-brand {
    grid-column: span 1;
  }

  .footer-logo-link {
    font-family: var(--header-logo-font, var(--font-serif));
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--footer-heading, var(--text-primary));
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    /* Override Logo component's header colors for footer context */
    --header-logo-color: var(--footer-heading, #ffffff);
    --header-logo-accent: var(--footer-link-hover, var(--accent-secondary));
    --header-logo-accent-color: var(--footer-logo-accent, var(--accent-secondary));
  }

  .footer-tagline {
    color: var(--footer-text, var(--text-secondary));
    font-size: 0.9375rem;
    line-height: 1.7;
    max-width: 280px;
  }

  .footer-heading {
    font-family: var(--font-sans, system-ui, sans-serif);
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--footer-heading, var(--text-primary));
    margin-bottom: 1.5rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-links a {
    color: var(--footer-link, var(--text-secondary));
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: var(--footer-link-hover, var(--accent-primary));
  }

  .footer-bottom {
    border-top: 1px solid var(--footer-border, rgba(255, 255, 255, 0.1));
    padding-top: 2rem;
    margin-top: 2rem;
  }

  .footer-bottom-content {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .footer-copyright {
    font-size: 0.8125rem;
    color: var(--footer-text, var(--text-secondary));
    margin: 0;
  }

  .footer-template-credit {
    font-size: 0.75rem;
    color: var(--footer-text, var(--text-secondary));
    opacity: 0.7; /* Increased from 0.5 for WCAG AA contrast compliance */
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
    margin: 0;
  }

  .footer-template-credit :global(.heart-icon) {
    color: #e11d48;
    display: inline-block;
    vertical-align: middle;
  }

  .footer-template-credit a {
    color: inherit;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .footer-template-credit a:hover {
    opacity: 1;
    text-decoration: underline;
  }

  /* ========================================
     Flex Row Layout (agency style)
     ======================================== */
  .footer-flex-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .footer-left {
    display: flex;
    align-items: center;
    gap: 3rem;
  }

  .footer-flex-row .footer-logo-link {
    margin-bottom: 0;
  }

  .footer-nav {
    display: flex;
    gap: 2rem;
  }

  .footer-nav a {
    color: var(--footer-link, var(--text-secondary));
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color 0.2s ease;
  }

  .footer-nav a:hover {
    color: var(--footer-link-hover, var(--accent-primary));
  }

  .footer-right {
    text-align: right;
  }

  .footer-template-credit-flex {
    text-align: center;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--footer-border, rgba(255, 255, 255, 0.1));
  }

  .footer-template-credit-sections {
    text-align: center;
    margin-top: 1.5rem;
    padding-top: 1rem;
    border-top: 1px solid var(--footer-border, rgba(255, 255, 255, 0.1));
  }

  /* ========================================
     Flex Sections Layout (product, app, newsletter)
     ======================================== */
  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-brand-section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-links-section {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .footer-links-section a {
    color: var(--footer-link, var(--text-secondary));
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color 0.2s ease;
  }

  .footer-links-section a:hover {
    color: var(--footer-link-hover, var(--accent-primary));
  }

  .footer-bottom-sections {
    border-top: 1px solid var(--footer-border, rgba(255, 255, 255, 0.1));
    padding-top: 1.5rem;
    text-align: center;
  }

  /* ========================================
     Responsive Styles
     ======================================== */
  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }

    .footer-flex-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.5rem;
    }

    .footer-left {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.5rem;
    }

    .footer-right {
      text-align: left;
    }

    .footer-content {
      flex-direction: column;
      gap: 1.5rem;
    }

    .footer-links-section {
      flex-wrap: wrap;
      gap: 1rem;
    }

    .footer-bottom-content {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-nav {
      flex-wrap: wrap;
      gap: 1rem;
    }
  }
</style>
