---
import { Github, Twitter, Facebook, Instagram, Linkedin, Youtube, Heart } from "lucide-react";
import { siteConfig, type SocialStyle, type SocialLink, type FooterLinkGroup, type SocialPosition } from "../config/site";
import Logo from "./Logo.astro";
import type { ComponentConfig } from "../utils/recipe-context";

// Check if we're in showcase mode (showcaseConfig is set by ShowcaseLayout)
const showcaseConfig = (Astro.locals as any).showcaseConfig as ComponentConfig | undefined;

type FooterLayout = 'grid-4col' | 'flex-row' | 'flex-sections' | 'minimal-centered';

// Use showcase config if available, otherwise fall back to siteConfig
const footerLayout = (showcaseConfig?.footerLayout || siteConfig.footerLayout || 'grid-4col') as FooterLayout;

// Social configuration with defaults - prefer showcaseConfig if available
const socialStyle = (showcaseConfig?.footer?.social?.style || siteConfig.footer.social?.style || 'icons') as SocialStyle;
const socialPosition = (showcaseConfig?.footer?.social?.position || siteConfig.footer.social?.position || 'brand') as SocialPosition;
const socialLinks = (showcaseConfig?.footer?.social?.links || siteConfig.footer.social?.links || []) as SocialLink[];
const linkGroups = (showcaseConfig?.footer?.linkGroups || siteConfig.footer.linkGroups || []) as FooterLinkGroup[];
const legalLinks = showcaseConfig?.footer?.legalLinks || siteConfig.footer.legalLinks || [];
const legalInBottomRow = showcaseConfig?.footer?.legalInBottomRow ?? siteConfig.footer.legalInBottomRow ?? false;
const showLegalLinks = showcaseConfig?.footer?.showLegalLinks ?? siteConfig.footer.showLegalLinks ?? true;
const showCopyright = showcaseConfig?.footer?.showCopyright ?? siteConfig.footer.showCopyright ?? true;
const showTemplateCredit = showcaseConfig?.footer?.showTemplateCredit ?? siteConfig.footer.showTemplateCredit ?? true;
const copyrightSuffix = showcaseConfig?.footer?.copyrightSuffix || siteConfig.footer.copyrightSuffix || "";

// Get footer content - copyright name and tagline from showcase config if available
const footerCopyright = showcaseConfig?.footer?.copyright || siteConfig.footer.copyright;
const footerTagline = showcaseConfig?.footer?.tagline || siteConfig.footer.tagline;
const footerLinks = showcaseConfig?.footer?.links || siteConfig.footer.links;
const templateName = showcaseConfig?.templateName || siteConfig.templateName;

// Check if social links should show under brand (not when position is 'column')
const showSocialUnderBrand = socialPosition === 'brand' && socialStyle !== 'none' && socialLinks.length > 0;

// Map platform names to Lucide icons
const platformIcons: Record<string, any> = {
  github: Github,
  twitter: Twitter,
  facebook: Facebook,
  instagram: Instagram,
  linkedin: Linkedin,
  youtube: Youtube,
};

// Get initials from platform name (e.g., "facebook" -> "FB")
const getInitials = (platform: string): string => {
  const initialsMap: Record<string, string> = {
    github: 'GH',
    twitter: 'TW',
    facebook: 'FB',
    instagram: 'IG',
    linkedin: 'LI',
    youtube: 'YT',
  };
  return initialsMap[platform.toLowerCase()] || platform.slice(0, 2).toUpperCase();
};
---

<footer class="footer" data-layout={footerLayout}>
  <div class="container">
    {/* Grid 4-Column Layout (corporate, startup, nonprofit style) */}
    {footerLayout === 'grid-4col' && (
      <div class="footer-grid">
        <div class="footer-column footer-brand">
          <a href="/" class="footer-logo-link">
            <Logo />
          </a>
          {footerTagline && (
            <p class="footer-tagline">{footerTagline}</p>
          )}
          {/* Social links under brand (nonprofit style) - only when position is 'brand' */}
          {showSocialUnderBrand && (
            <div class={`social-links social-style-${socialStyle}`}>
              {socialLinks.map((social) => {
                const IconComponent = platformIcons[social.platform.toLowerCase()];
                return socialStyle === 'icons' && IconComponent ? (
                  <a href={social.href} aria-label={social.label} class="social-icon" target="_blank" rel="noopener noreferrer">
                    <IconComponent size={20} />
                  </a>
                ) : socialStyle === 'initials' ? (
                  <a href={social.href} aria-label={social.label} class="social-initial" target="_blank" rel="noopener noreferrer">
                    {getInitials(social.platform)}
                  </a>
                ) : socialStyle === 'text' ? (
                  <a href={social.href} class="social-text-link" target="_blank" rel="noopener noreferrer">
                    {social.label}
                  </a>
                ) : null;
              })}
            </div>
          )}
        </div>

        {/* Render link groups if provided, otherwise fall back to simple links */}
        {linkGroups.length > 0 ? (
          linkGroups.map((group) => (
            <div class="footer-column">
              <h3 class="footer-heading">{group.heading}</h3>
              <ul class="footer-links">
                {group.links.map((link) => (
                  <li>
                    <a href={link.href}>{link.label}</a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        ) : (
          <div class="footer-column">
            <h3 class="footer-heading">Links</h3>
            <ul class="footer-links">
              {footerLinks.map((link) => (
                <li>
                  <a href={link.href}>{link.label}</a>
                </li>
              ))}
            </ul>
          </div>
        )}
      </div>
    )}

    {/* Flex Row Layout (agency style) - logo+links left, copyright right */}
    {footerLayout === 'flex-row' && (
      <>
        <div class="footer-flex-row">
          <div class="footer-left">
            <a href="/" class="footer-logo-link">
              <Logo />
            </a>
            <nav class="footer-nav">
              {footerLinks.map((link) => (
                <a href={link.href}>{link.label}</a>
              ))}
            </nav>
          </div>
          {showCopyright && (
            <div class="footer-right">
              <p class="footer-copyright">&copy; {new Date().getFullYear()} {footerCopyright}. All rights reserved.{copyrightSuffix && ` ${copyrightSuffix}`}</p>
            </div>
          )}
        </div>
        {showTemplateCredit && (
          <p class="footer-template-credit footer-template-credit-flex">
            {templateName} Astro template built with <Heart size={12} className="heart-icon" /> by <a href="https://sofondo.com" target="_blank" rel="noopener">Sofondo</a>
          </p>
        )}
      </>
    )}

    {/* Flex Sections Layout (product, app style) - brand left, links right */}
    {footerLayout === 'flex-sections' && (
      <>
        <div class="footer-content">
          <div class="footer-brand-section">
            <a href="/" class="footer-logo-link">
              <Logo />
            </a>
            {footerTagline && (
              <p class="footer-tagline">{footerTagline}</p>
            )}
          </div>
          <nav class="footer-links-section">
            {footerLinks.map((link) => (
              <a href={link.href}>{link.label}</a>
            ))}
          </nav>
        </div>
        {showCopyright && (
          <div class="footer-bottom-sections">
            <p class="footer-copyright">&copy; {new Date().getFullYear()} {footerCopyright}. All rights reserved.{copyrightSuffix && ` ${copyrightSuffix}`}</p>
          </div>
        )}
        {showTemplateCredit && (
          <p class="footer-template-credit footer-template-credit-sections">
            {templateName} Astro template built with <Heart size={12} className="heart-icon" /> by <a href="https://sofondo.com" target="_blank" rel="noopener">Sofondo</a>
          </p>
        )}
      </>
    )}

    {/* Minimal Centered Layout (newsletter style) - everything centered */}
    {footerLayout === 'minimal-centered' && (
      <div class="footer-centered">
        <a href="/" class="footer-logo-link footer-logo-centered">
          <Logo />
        </a>
        {footerTagline && (
          <p class="footer-tagline footer-tagline-centered">{footerTagline}</p>
        )}
        <nav class="footer-links-centered">
          {footerLinks.map((link) => (
            <a href={link.href}>{link.label}</a>
          ))}
        </nav>
        {showCopyright && (
          <p class="footer-copyright footer-copyright-centered">&copy; {new Date().getFullYear()} {footerCopyright}.{copyrightSuffix && ` ${copyrightSuffix}`}</p>
        )}
        {showTemplateCredit && (
          <p class="footer-template-credit footer-template-credit-centered">
            {templateName} Astro template built with <Heart size={12} className="heart-icon" /> by <a href="https://sofondo.com" target="_blank" rel="noopener">Sofondo</a>
          </p>
        )}
      </div>
    )}

    {/* Bottom bar for grid layout */}
    {footerLayout === 'grid-4col' && (
      <div class="footer-bottom">
        <div class="footer-bottom-content">
          {showCopyright && (
            <p class="footer-copyright">&copy; {new Date().getFullYear()} {footerCopyright}. All rights reserved.{copyrightSuffix && ` ${copyrightSuffix}`}</p>
          )}

          {/* Legal links - inline or in bottom row based on config */}
          {showLegalLinks && !legalInBottomRow && legalLinks.length > 0 && (
            <nav class="footer-legal">
              {legalLinks.map((link) => (
                <a href={link.href}>{link.label}</a>
              ))}
            </nav>
          )}
        </div>

        {/* Legal links in separate row */}
        {showLegalLinks && legalInBottomRow && legalLinks.length > 0 && (
          <nav class="footer-legal-row">
            {legalLinks.map((link) => (
              <a href={link.href}>{link.label}</a>
            ))}
          </nav>
        )}

        {showTemplateCredit && (
          <p class="footer-template-credit">
            {templateName} Astro template built with <Heart size={12} className="heart-icon" /> by <a href="https://sofondo.com" target="_blank" rel="noopener">Sofondo</a>
          </p>
        )}
      </div>
    )}
  </div>
</footer>

<style>
  .footer {
    padding: 4rem 0 2rem;
    background: var(--footer-bg, var(--bg-light));
    color: var(--footer-text, var(--text-secondary));
    border-top: 1px solid var(--footer-border, var(--border-color));
  }

  .container {
    max-width: var(--footer-max-width, 1200px);
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* ========================================
     Grid 4-Column Layout (corporate, startup, nonprofit)
     ======================================== */
  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
    text-align: left;
  }

  .footer-column {
    display: flex;
    flex-direction: column;
  }

  .footer-brand {
    grid-column: span 1;
  }

  .footer-logo-link {
    font-family: var(--header-logo-font, var(--font-serif));
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--footer-heading, var(--text-primary));
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    /* Override Logo component's header colors for footer context */
    --header-logo-color: var(--footer-heading, #ffffff);
    --header-logo-accent: var(--footer-link-hover, var(--accent-secondary));
    --header-logo-accent-color: var(--footer-logo-accent, var(--accent-secondary));
  }

  .footer-tagline {
    color: var(--footer-text, var(--text-secondary));
    font-size: 0.9375rem;
    line-height: 1.7;
    max-width: 280px;
  }

  .footer-heading {
    font-family: var(--font-sans, system-ui, sans-serif);
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--footer-heading, var(--text-primary));
    margin-bottom: 1.5rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-links a {
    color: var(--footer-link, var(--text-secondary));
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: var(--footer-link-hover, var(--accent-primary));
  }

  /* Social Links - Icon Style */
  .social-links {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .social-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.1);
    color: var(--footer-link, var(--text-secondary));
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .social-icon:hover {
    background: var(--footer-link-hover, var(--accent-primary));
    color: #ffffff;
    transform: translateY(-2px);
  }

  /* Social Links - Initials Style */
  .social-initial {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: var(--social-initial-bg, rgba(255, 255, 255, 0.1));
    color: var(--social-initial-text, var(--footer-link));
    text-decoration: none;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    transition: all 0.2s ease;
  }

  .social-initial:hover {
    background: var(--footer-link-hover, var(--accent-primary));
    color: #ffffff;
    transform: translateY(-2px);
  }

  /* Social Links - Text Style */
  .social-text-link {
    color: var(--footer-link, var(--text-secondary));
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color 0.2s ease;
  }

  .social-text-link:hover {
    color: var(--footer-link-hover, var(--accent-primary));
  }

  .footer-bottom {
    border-top: 1px solid var(--footer-border, rgba(255, 255, 255, 0.1));
    padding-top: 2rem;
    margin-top: 2rem;
  }

  .footer-bottom-content {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .footer-copyright {
    font-size: 0.8125rem;
    color: var(--footer-text, var(--text-secondary));
    margin: 0;
  }

  .footer-legal {
    display: flex;
    gap: 1.5rem;
  }

  .footer-legal a {
    color: var(--footer-link, var(--text-secondary));
    text-decoration: none;
    font-size: 0.8125rem;
    transition: color 0.2s ease;
  }

  .footer-legal a:hover {
    color: var(--footer-link-hover, var(--accent-primary));
  }

  .footer-legal-row {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--footer-border, rgba(255, 255, 255, 0.05));
  }

  .footer-legal-row a {
    color: var(--footer-link, var(--text-secondary));
    text-decoration: none;
    font-size: 0.8125rem;
    transition: color 0.2s ease;
  }

  .footer-legal-row a:hover {
    color: var(--footer-link-hover, var(--accent-primary));
  }

  .footer-template-credit {
    font-size: 0.75rem;
    color: var(--footer-text, var(--text-secondary));
    opacity: 0.7; /* Increased from 0.5 for WCAG AA contrast compliance */
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
    margin: 0;
  }

  .footer-template-credit :global(.heart-icon) {
    color: #e11d48;
    display: inline-block;
    vertical-align: middle;
  }

  .footer-template-credit a {
    color: inherit;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .footer-template-credit a:hover {
    opacity: 1;
    text-decoration: underline;
  }

  /* ========================================
     Flex Row Layout (agency style)
     ======================================== */
  .footer-flex-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .footer-left {
    display: flex;
    align-items: center;
    gap: 3rem;
  }

  .footer-flex-row .footer-logo-link {
    margin-bottom: 0;
  }

  .footer-nav {
    display: flex;
    gap: 2rem;
  }

  .footer-nav a {
    color: var(--footer-link, var(--text-secondary));
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color 0.2s ease;
  }

  .footer-nav a:hover {
    color: var(--footer-link-hover, var(--accent-primary));
  }

  .footer-right {
    text-align: right;
  }

  .footer-template-credit-flex {
    text-align: center;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--footer-border, rgba(255, 255, 255, 0.1));
  }

  .footer-template-credit-sections {
    text-align: center;
    margin-top: 1.5rem;
    padding-top: 1rem;
    border-top: 1px solid var(--footer-border, rgba(255, 255, 255, 0.1));
  }

  /* ========================================
     Flex Sections Layout (product, app, newsletter)
     ======================================== */
  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-brand-section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-links-section {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .footer-links-section a {
    color: var(--footer-link, var(--text-secondary));
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color 0.2s ease;
  }

  .footer-links-section a:hover {
    color: var(--footer-link-hover, var(--accent-primary));
  }

  .footer-bottom-sections {
    border-top: 1px solid var(--footer-border, rgba(255, 255, 255, 0.1));
    padding-top: 1.5rem;
    text-align: center;
  }

  /* ========================================
     Responsive Styles
     ======================================== */
  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }

    .footer-flex-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.5rem;
    }

    .footer-left {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.5rem;
    }

    .footer-right {
      text-align: left;
    }

    .footer-content {
      flex-direction: column;
      gap: 1.5rem;
    }

    .footer-links-section {
      flex-wrap: wrap;
      gap: 1rem;
    }

    .footer-bottom-content {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
      align-items: center;
    }

    .footer-legal {
      flex-wrap: wrap;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-nav {
      flex-wrap: wrap;
      gap: 1rem;
    }
  }

  /* ========================================
     Minimal Centered Layout (newsletter style)
     ======================================== */
  .footer-centered {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.5rem;
  }

  .footer-logo-centered {
    margin-bottom: 0.25rem;
  }

  .footer-tagline-centered {
    margin-bottom: 1rem;
  }

  .footer-links-centered {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
    margin-bottom: 1.5rem;
  }

  .footer-links-centered a {
    color: var(--footer-link, var(--text-secondary));
    text-decoration: none;
    font-size: 0.8125rem;
    transition: color 0.2s ease;
  }

  .footer-links-centered a:hover {
    color: var(--footer-link-hover, var(--accent-primary));
  }

  .footer-copyright-centered {
    font-size: 0.75rem;
    opacity: 0.8;
    margin: 0;
  }

  .footer-template-credit-centered {
    margin-top: 0.5rem;
  }
</style>
