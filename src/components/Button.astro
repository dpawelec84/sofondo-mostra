---
/**
 * Button Component
 *
 * A reusable button with multiple variants:
 * - primary: Main CTA button
 * - secondary: Secondary action
 * - outline: Outlined style
 * - ghost: Minimal/text style
 *
 * Supports both <button> and <a> elements
 */

interface Props {
  /** Button variant */
  variant?: "primary" | "secondary" | "outline" | "ghost";
  /** Button size */
  size?: "sm" | "md" | "lg";
  /** Render as link */
  href?: string;
  /** Button type (for <button>) */
  type?: "button" | "submit" | "reset";
  /** Disabled state */
  disabled?: boolean;
  /** Full width */
  fullWidth?: boolean;
  /** Additional CSS classes */
  class?: string;
  /** Open link in new tab */
  target?: string;
  /** Link rel attribute */
  rel?: string;
  /** Loading state */
  loading?: boolean;
}

const {
  variant = "primary",
  size = "md",
  href,
  type = "button",
  disabled = false,
  fullWidth = false,
  class: className = "",
  target,
  rel,
  loading = false,
} = Astro.props;

const Tag = href ? "a" : "button";
const isDisabled = disabled || loading;
---

<Tag
  class:list={[
    "btn",
    `btn-${variant}`,
    `btn-${size}`,
    { "btn-full": fullWidth, "btn-loading": loading },
    className,
  ]}
  {...href ? { href } : { type }}
  {...target && { target }}
  {...rel && { rel }}
  {...isDisabled && !href && { disabled: true }}
  {...isDisabled && href && { "aria-disabled": "true", tabindex: "-1" }}
>
  {loading && (
    <span class="btn-spinner" aria-hidden="true">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="10" stroke-dasharray="32" stroke-dashoffset="32">
          <animate attributeName="stroke-dashoffset" values="32;0" dur="1s" repeatCount="indefinite" />
        </circle>
      </svg>
    </span>
  )}
  <span class="btn-content"><slot /></span>
</Tag>

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-family: inherit;
    font-weight: 500;
    text-decoration: none;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .btn:focus-visible {
    outline: 2px solid var(--accent-primary);
    outline-offset: 2px;
  }

  .btn:disabled,
  .btn[aria-disabled="true"] {
    opacity: 0.6;
    cursor: not-allowed;
    pointer-events: none;
  }

  /* Sizes */
  .btn-sm {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
  }

  .btn-md {
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
  }

  .btn-lg {
    padding: 1rem 2rem;
    font-size: 1.125rem;
  }

  /* Full width */
  .btn-full {
    width: 100%;
  }

  /* Primary variant */
  .btn-primary {
    background: var(--accent-primary, #3b82f6);
    color: #ffffff;
  }

  .btn-primary:hover:not(:disabled):not([aria-disabled="true"]) {
    background: var(--accent-primary-hover, #2563eb);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
  }

  .btn-primary:active:not(:disabled):not([aria-disabled="true"]) {
    transform: translateY(0);
  }

  /* Secondary variant */
  .btn-secondary {
    background: var(--bg-secondary, #f3f4f6);
    color: var(--text-primary, #1f2937);
  }

  .btn-secondary:hover:not(:disabled):not([aria-disabled="true"]) {
    background: var(--border-color, #e5e7eb);
  }

  /* Outline variant */
  .btn-outline {
    background: transparent;
    color: var(--accent-primary, #3b82f6);
    border: 1px solid var(--accent-primary, #3b82f6);
  }

  .btn-outline:hover:not(:disabled):not([aria-disabled="true"]) {
    background: var(--accent-primary, #3b82f6);
    color: #ffffff;
  }

  /* Ghost variant */
  .btn-ghost {
    background: transparent;
    color: var(--text-primary, #1f2937);
  }

  .btn-ghost:hover:not(:disabled):not([aria-disabled="true"]) {
    background: var(--bg-secondary, #f3f4f6);
  }

  /* Loading state */
  .btn-loading .btn-content {
    opacity: 0;
  }

  .btn-spinner {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .btn-spinner svg {
    width: 1.25em;
    height: 1.25em;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* Dark mode */
  [data-theme="dark"] .btn-secondary {
    background: var(--bg-secondary, #374151);
    color: var(--text-primary, #f9fafb);
  }

  [data-theme="dark"] .btn-secondary:hover:not(:disabled):not([aria-disabled="true"]) {
    background: var(--border-color, #4b5563);
  }

  [data-theme="dark"] .btn-ghost {
    color: var(--text-primary, #f9fafb);
  }

  [data-theme="dark"] .btn-ghost:hover:not(:disabled):not([aria-disabled="true"]) {
    background: var(--bg-secondary, #374151);
  }
</style>
