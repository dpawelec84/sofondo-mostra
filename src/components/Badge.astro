---
/**
 * Badge Component
 *
 * A small label for status indicators, tags, and categories.
 *
 * Variants:
 * - default: Subtle background
 * - solid: Filled background with white text
 * - outline: Border only
 *
 * Colors:
 * - gray, blue, green, yellow, red, purple, pink
 */

interface Props {
  /** Badge variant */
  variant?: "default" | "solid" | "outline";
  /** Badge color */
  color?: "gray" | "blue" | "green" | "yellow" | "red" | "purple" | "pink";
  /** Badge size */
  size?: "sm" | "md" | "lg";
  /** Render as pill (fully rounded) */
  pill?: boolean;
  /** Additional CSS classes */
  class?: string;
}

const {
  variant = "default",
  color = "gray",
  size = "md",
  pill = false,
  class: className = "",
} = Astro.props;
---

<span
  class:list={[
    "badge",
    `badge-${variant}`,
    `badge-${color}`,
    `badge-${size}`,
    { "badge-pill": pill },
    className,
  ]}
>
  <slot />
</span>

<style>
  .badge {
    display: inline-flex;
    align-items: center;
    font-weight: 500;
    white-space: nowrap;
  }

  /* Sizes */
  .badge-sm {
    padding: 0.125rem 0.5rem;
    font-size: 0.75rem;
    border-radius: 4px;
  }

  .badge-md {
    padding: 0.25rem 0.625rem;
    font-size: 0.8125rem;
    border-radius: 5px;
  }

  .badge-lg {
    padding: 0.375rem 0.75rem;
    font-size: 0.875rem;
    border-radius: 6px;
  }

  /* Pill shape */
  .badge-pill {
    border-radius: 9999px;
  }

  /* Default variant - subtle backgrounds */
  .badge-default.badge-gray {
    background: #f3f4f6;
    color: #4b5563;
  }

  .badge-default.badge-blue {
    background: #dbeafe;
    color: #1d4ed8;
  }

  .badge-default.badge-green {
    background: #dcfce7;
    color: #15803d;
  }

  .badge-default.badge-yellow {
    background: #fef3c7;
    color: #b45309;
  }

  .badge-default.badge-red {
    background: #fee2e2;
    color: #b91c1c;
  }

  .badge-default.badge-purple {
    background: #f3e8ff;
    color: #7c3aed;
  }

  .badge-default.badge-pink {
    background: #fce7f3;
    color: #be185d;
  }

  /* Solid variant - filled backgrounds */
  .badge-solid.badge-gray {
    background: #6b7280;
    color: #ffffff;
  }

  .badge-solid.badge-blue {
    background: #3b82f6;
    color: #ffffff;
  }

  .badge-solid.badge-green {
    background: #22c55e;
    color: #ffffff;
  }

  .badge-solid.badge-yellow {
    background: #f59e0b;
    color: #ffffff;
  }

  .badge-solid.badge-red {
    background: #ef4444;
    color: #ffffff;
  }

  .badge-solid.badge-purple {
    background: #8b5cf6;
    color: #ffffff;
  }

  .badge-solid.badge-pink {
    background: #ec4899;
    color: #ffffff;
  }

  /* Outline variant */
  .badge-outline {
    background: transparent;
    border: 1px solid currentColor;
  }

  .badge-outline.badge-gray {
    color: #6b7280;
  }

  .badge-outline.badge-blue {
    color: #3b82f6;
  }

  .badge-outline.badge-green {
    color: #22c55e;
  }

  .badge-outline.badge-yellow {
    color: #f59e0b;
  }

  .badge-outline.badge-red {
    color: #ef4444;
  }

  .badge-outline.badge-purple {
    color: #8b5cf6;
  }

  .badge-outline.badge-pink {
    color: #ec4899;
  }

  /* Dark mode */
  [data-theme="dark"] .badge-default.badge-gray {
    background: #374151;
    color: #d1d5db;
  }

  [data-theme="dark"] .badge-default.badge-blue {
    background: rgba(59, 130, 246, 0.2);
    color: #93c5fd;
  }

  [data-theme="dark"] .badge-default.badge-green {
    background: rgba(34, 197, 94, 0.2);
    color: #86efac;
  }

  [data-theme="dark"] .badge-default.badge-yellow {
    background: rgba(245, 158, 11, 0.2);
    color: #fcd34d;
  }

  [data-theme="dark"] .badge-default.badge-red {
    background: rgba(239, 68, 68, 0.2);
    color: #fca5a5;
  }

  [data-theme="dark"] .badge-default.badge-purple {
    background: rgba(139, 92, 246, 0.2);
    color: #c4b5fd;
  }

  [data-theme="dark"] .badge-default.badge-pink {
    background: rgba(236, 72, 153, 0.2);
    color: #f9a8d4;
  }
</style>
