---
/**
 * SEO Component
 *
 * Centralized component for all SEO-related meta tags including:
 * - Basic meta tags (title, description)
 * - Open Graph tags for social sharing
 * - Twitter Card tags
 * - Canonical URLs
 * - JSON-LD structured data
 */

import { siteConfig } from "../config/site";

export interface Props {
  /** Page title - will be formatted as "Title | Site Name" */
  title: string;
  /** Page description for meta and social sharing */
  description?: string;
  /** Canonical URL for this page (defaults to current page URL) */
  canonical?: string;
  /** Open Graph image URL (absolute URL recommended) */
  image?: string;
  /** Page type for Open Graph (default: website) */
  type?: "website" | "article" | "product";
  /** Article published date (ISO 8601 format) - for type="article" */
  publishedDate?: string;
  /** Article modified date (ISO 8601 format) - for type="article" */
  modifiedDate?: string;
  /** Article author name - for type="article" */
  author?: string;
  /** Disable search engine indexing for this page */
  noindex?: boolean;
  /** Disable following links on this page */
  nofollow?: boolean;
  /** Additional JSON-LD structured data */
  structuredData?: object;
}

const {
  title,
  description = siteConfig.description,
  canonical,
  image,
  type = "website",
  publishedDate,
  modifiedDate,
  author,
  noindex = false,
  nofollow = false,
  structuredData,
} = Astro.props;

// Get site URL from Astro config or default
const siteUrl = Astro.site?.toString().replace(/\/$/, "") || "";

// Format title with site name
const formattedTitle = title.includes(siteConfig.name)
  ? title
  : `${title} | ${siteConfig.name}`;

// Resolve canonical URL
const canonicalUrl = canonical
  ? (canonical.startsWith("http") ? canonical : `${siteUrl}${canonical}`)
  : `${siteUrl}${Astro.url.pathname}`;

// Resolve image URL (must be absolute for social sharing)
const imageUrl = image
  ? (image.startsWith("http") ? image : `${siteUrl}${image}`)
  : siteConfig.seo?.defaultImage
    ? `${siteUrl}${siteConfig.seo.defaultImage}`
    : undefined;

// Build robots meta content
const robotsContent = [
  noindex ? "noindex" : "index",
  nofollow ? "nofollow" : "follow",
].join(", ");

// Twitter handle (without @)
const twitterHandle = siteConfig.seo?.twitterHandle?.replace("@", "");

// Build base structured data for Organization/WebSite
const baseStructuredData = {
  "@context": "https://schema.org",
  "@graph": [
    // Organization
    {
      "@type": "Organization",
      "@id": `${siteUrl}/#organization`,
      name: siteConfig.name,
      url: siteUrl,
      ...(siteConfig.logo.src && {
        logo: {
          "@type": "ImageObject",
          url: `${siteUrl}${siteConfig.logo.src}`,
        },
      }),
    },
    // WebSite
    {
      "@type": "WebSite",
      "@id": `${siteUrl}/#website`,
      url: siteUrl,
      name: siteConfig.name,
      description: siteConfig.description,
      publisher: {
        "@id": `${siteUrl}/#organization`,
      },
    },
    // WebPage
    {
      "@type": type === "article" ? "Article" : "WebPage",
      "@id": canonicalUrl,
      url: canonicalUrl,
      name: title,
      description: description,
      isPartOf: {
        "@id": `${siteUrl}/#website`,
      },
      ...(type === "article" && publishedDate && {
        datePublished: publishedDate,
      }),
      ...(type === "article" && modifiedDate && {
        dateModified: modifiedDate,
      }),
      ...(type === "article" && author && {
        author: {
          "@type": "Person",
          name: author,
        },
      }),
      ...(imageUrl && {
        primaryImageOfPage: {
          "@type": "ImageObject",
          url: imageUrl,
        },
      }),
    },
  ],
};

// Merge with custom structured data if provided
const finalStructuredData = structuredData
  ? { ...baseStructuredData, ...structuredData }
  : baseStructuredData;
---

<!-- Primary Meta Tags -->
<title>{formattedTitle}</title>
<meta name="title" content={formattedTitle} />
<meta name="description" content={description} />
<meta name="robots" content={robotsContent} />
<link rel="canonical" href={canonicalUrl} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={formattedTitle} />
<meta property="og:description" content={description} />
<meta property="og:site_name" content={siteConfig.name} />
{imageUrl && <meta property="og:image" content={imageUrl} />}
{imageUrl && <meta property="og:image:alt" content={title} />}

<!-- Twitter -->
<meta name="twitter:card" content={imageUrl ? "summary_large_image" : "summary"} />
<meta name="twitter:url" content={canonicalUrl} />
<meta name="twitter:title" content={formattedTitle} />
<meta name="twitter:description" content={description} />
{imageUrl && <meta name="twitter:image" content={imageUrl} />}
{twitterHandle && <meta name="twitter:site" content={`@${twitterHandle}`} />}
{twitterHandle && <meta name="twitter:creator" content={`@${twitterHandle}`} />}

<!-- Article-specific tags -->
{type === "article" && publishedDate && (
  <meta property="article:published_time" content={publishedDate} />
)}
{type === "article" && modifiedDate && (
  <meta property="article:modified_time" content={modifiedDate} />
)}
{type === "article" && author && (
  <meta property="article:author" content={author} />
)}

<!-- JSON-LD Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(finalStructuredData)} />
