---
import Layout from "../../../layouts/Layout.astro";
import SubNav from "../../../components/SubNav.astro";
import FadeInOnScroll from "../../../components/FadeInOnScroll.astro";
---

<Layout title="Premium Recipes - Sofondo Mostra">
  <SubNav variant="grouped">
    <div class="sub-nav-group sub-nav-group-primary">
      <a href="/showcase/">All</a>
    </div>
    <div class="sub-nav-group sub-nav-group-secondary">
      <a href="/showcase/free/">Free</a>
      <a href="/showcase/premium/" class="active">Premium</a>
    </div>
    <div class="sub-nav-group sub-nav-group-tertiary">
      <a href="/showcase/marketing/">Marketing</a>
      <a href="/showcase/landing/">Landing</a>
      <a href="/showcase/nonprofit/">Non-profit</a>
    </div>
  </SubNav>

  <section class="page-content" data-bg-theme="light">
    <div class="container">
      <FadeInOnScroll>
        <div class="page-header">
          <h1 class="page-title">Premium Recipes</h1>
          <p class="page-description intro">
            Advanced templates with extra polish. Free to use, but please consider <a href="/support/">supporting development</a>.
          </p>
        </div>
      </FadeInOnScroll>

      <div class="showcase-grid">
        <FadeInOnScroll delay={0}>
          <a href="/showcase/examples/agency/" class="showcase-card">
            <div class="showcase-image showcase-image--teal">
              <span class="showcase-badge showcase-badge--premium">Premium</span>
            </div>
            <div class="showcase-content">
              <span class="showcase-tag">Marketing</span>
              <h3>Agency Portfolio</h3>
              <p>Creative agency site showcasing work and team members.</p>
              <span class="showcase-link">View Demo &rarr;</span>
            </div>
          </a>
        </FadeInOnScroll>

        <FadeInOnScroll delay={100}>
          <a href="/showcase/examples/product-launch/" class="showcase-card">
            <div class="showcase-image showcase-image--orange">
              <span class="showcase-badge showcase-badge--premium">Premium</span>
            </div>
            <div class="showcase-content">
              <span class="showcase-tag">Landing</span>
              <h3>Product Launch</h3>
              <p>Eye-catching product launch page with features and pricing.</p>
              <span class="showcase-link">View Demo &rarr;</span>
            </div>
          </a>
        </FadeInOnScroll>

        <FadeInOnScroll delay={200}>
          <a href="/showcase/examples/app-download/" class="showcase-card">
            <div class="showcase-image showcase-image--pink">
              <span class="showcase-badge showcase-badge--premium">Premium</span>
            </div>
            <div class="showcase-content">
              <span class="showcase-tag">Landing</span>
              <h3>App Download</h3>
              <p>Mobile app landing page with download links and screenshots.</p>
              <span class="showcase-link">View Demo &rarr;</span>
            </div>
          </a>
        </FadeInOnScroll>

        <FadeInOnScroll delay={300}>
          <a href="/showcase/examples/newsletter/" class="showcase-card">
            <div class="showcase-image showcase-image--cyan">
              <span class="showcase-badge showcase-badge--premium">Premium</span>
            </div>
            <div class="showcase-content">
              <span class="showcase-tag">Landing</span>
              <h3>Newsletter Signup</h3>
              <p>Simple landing page focused on email capture and conversion.</p>
              <span class="showcase-link">View Demo &rarr;</span>
            </div>
          </a>
        </FadeInOnScroll>
      </div>

      <FadeInOnScroll delay={400}>
        <div class="support-cta">
          <p>Premium recipes are free to use. If you find them valuable, please consider supporting development.</p>
          <div class="support-links">
            <a href="https://ko-fi.com/sofondo" class="support-link" target="_blank" rel="noopener">
              <span class="support-icon">â˜•</span>
              Ko-fi
            </a>
            <a href="https://github.com/sponsors/sofondo" class="support-link" target="_blank" rel="noopener">
              <span class="support-icon">ðŸ’œ</span>
              GitHub Sponsors
            </a>
          </div>
        </div>
      </FadeInOnScroll>
    </div>
  </section>
</Layout>

<style>
  .page-content {
    padding: 2rem 0 4rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .page-description {
    font-size: 1.25rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .page-description a {
    color: var(--accent-primary);
    text-decoration: underline;
  }

  .showcase-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .showcase-card {
    background: var(--bg-card);
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--border-color);
    transition: all 0.2s ease;
  }

  .showcase-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .showcase-image {
    height: 180px;
    background-size: cover;
    background-position: center;
    position: relative;
    display: flex;
    align-items: flex-start;
    justify-content: flex-end;
    padding: 0.75rem;
  }

  .showcase-badge {
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .showcase-badge--free {
    background: rgba(255, 255, 255, 0.9);
    color: #059669;
  }

  .showcase-badge--premium {
    background: rgba(139, 92, 246, 0.9);
    color: #ffffff;
  }

  .showcase-image--teal {
    background: linear-gradient(135deg, #14b8a6, #06b6d4);
  }

  .showcase-image--orange {
    background: linear-gradient(135deg, #f59e0b, #f97316);
  }

  .showcase-image--pink {
    background: linear-gradient(135deg, #ec4899, #f43f5e);
  }

  .showcase-image--cyan {
    background: linear-gradient(135deg, #06b6d4, #0ea5e9);
  }

  .showcase-content {
    padding: 1.5rem;
  }

  .showcase-tag {
    display: inline-block;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-secondary);
    background: var(--bg-secondary);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    margin-bottom: 0.5rem;
  }

  .showcase-content h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .showcase-content p {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.5;
  }

  .showcase-link {
    display: inline-block;
    margin-top: 0.75rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--accent-primary);
    transition: color 0.2s;
  }

  .showcase-card:hover .showcase-link {
    color: var(--text-primary);
  }

  a.showcase-card {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .support-cta {
    max-width: 600px;
    margin: 3rem auto 0;
    text-align: center;
    padding: 2rem;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.05), rgba(99, 102, 241, 0.05));
    border: 1px solid rgba(139, 92, 246, 0.2);
    border-radius: 12px;
  }

  .support-cta p {
    color: var(--text-secondary);
    margin-bottom: 1.25rem;
  }

  .support-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .support-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    color: var(--text-primary);
    font-weight: 500;
    font-size: 0.9375rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .support-link:hover {
    border-color: var(--accent-primary);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .support-icon {
    font-size: 1.125rem;
  }
</style>
