---
import Layout from "../../layouts/Layout.astro";
import SubNav from "../../components/SubNav.astro";
import FadeInOnScroll from "../../components/FadeInOnScroll.astro";
---

<Layout title="Showcase - Sofondo Mostra">
  <SubNav variant="simple">
    <a href="/showcase/" class="active">All Projects</a>
    <a href="/showcase/marketing/">Marketing Sites</a>
    <a href="/showcase/landing/">Landing Pages</a>
  </SubNav>

  <section class="page-content" data-bg-theme="light">
    <div class="container">
      <FadeInOnScroll>
        <div class="page-header">
          <h1 class="page-title">Showcase</h1>
          <p class="page-description intro">
            Examples of what you can build with this template.
          </p>
        </div>
      </FadeInOnScroll>

      <div class="showcase-grid">
        <!-- Marketing Sites -->
        <FadeInOnScroll delay={0}>
          <a href="/showcase/examples/corporate/" class="showcase-card">
            <div class="showcase-image showcase-image--blue"></div>
            <div class="showcase-content">
              <span class="showcase-tag">Marketing</span>
              <h3>Corporate Website</h3>
              <p>Professional business site with multiple sections and contact forms.</p>
              <span class="showcase-link">View Demo &rarr;</span>
            </div>
          </a>
        </FadeInOnScroll>

        <FadeInOnScroll delay={100}>
          <a href="/showcase/examples/agency/" class="showcase-card">
            <div class="showcase-image showcase-image--teal"></div>
            <div class="showcase-content">
              <span class="showcase-tag">Marketing</span>
              <h3>Agency Portfolio</h3>
              <p>Creative agency site showcasing work and team members.</p>
              <span class="showcase-link">View Demo &rarr;</span>
            </div>
          </a>
        </FadeInOnScroll>

        <FadeInOnScroll delay={200}>
          <a href="/showcase/examples/startup/" class="showcase-card">
            <div class="showcase-image showcase-image--purple"></div>
            <div class="showcase-content">
              <span class="showcase-tag">Marketing</span>
              <h3>Tech Startup</h3>
              <p>Modern startup site with product features and pricing.</p>
              <span class="showcase-link">View Demo &rarr;</span>
            </div>
          </a>
        </FadeInOnScroll>

        <!-- Landing Pages -->
        <FadeInOnScroll delay={300}>
          <a href="/showcase/examples/product-launch/" class="showcase-card">
            <div class="showcase-image showcase-image--orange"></div>
            <div class="showcase-content">
              <span class="showcase-tag">Landing</span>
              <h3>Product Launch</h3>
              <p>Eye-catching product launch page with features and pricing.</p>
              <span class="showcase-link">View Demo &rarr;</span>
            </div>
          </a>
        </FadeInOnScroll>

        <FadeInOnScroll delay={400}>
          <a href="/showcase/examples/app-download/" class="showcase-card">
            <div class="showcase-image showcase-image--pink"></div>
            <div class="showcase-content">
              <span class="showcase-tag">Landing</span>
              <h3>App Download</h3>
              <p>Mobile app landing page with download links and screenshots.</p>
              <span class="showcase-link">View Demo &rarr;</span>
            </div>
          </a>
        </FadeInOnScroll>

        <FadeInOnScroll delay={500}>
          <a href="/showcase/examples/newsletter/" class="showcase-card">
            <div class="showcase-image showcase-image--cyan"></div>
            <div class="showcase-content">
              <span class="showcase-tag">Landing</span>
              <h3>Newsletter Signup</h3>
              <p>Simple landing page focused on email capture and conversion.</p>
              <span class="showcase-link">View Demo &rarr;</span>
            </div>
          </a>
        </FadeInOnScroll>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-content {
    padding: 2rem 0 4rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .page-description {
    font-size: 1.25rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .showcase-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .showcase-card {
    background: var(--bg-card);
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--border-color);
    transition: all 0.2s ease;
  }

  .showcase-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .showcase-image {
    height: 180px;
    background-size: cover;
    background-position: center;
  }

  .showcase-image--blue {
    background: linear-gradient(135deg, #3b82f6, #6366f1);
  }

  .showcase-image--teal {
    background: linear-gradient(135deg, #14b8a6, #06b6d4);
  }

  .showcase-image--purple {
    background: linear-gradient(135deg, #8b5cf6, #a855f7);
  }

  .showcase-image--orange {
    background: linear-gradient(135deg, #f59e0b, #f97316);
  }

  .showcase-image--pink {
    background: linear-gradient(135deg, #ec4899, #f43f5e);
  }

  .showcase-image--cyan {
    background: linear-gradient(135deg, #06b6d4, #0ea5e9);
  }

  .showcase-content {
    padding: 1.5rem;
  }

  .showcase-tag {
    display: inline-block;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-secondary);
    background: var(--bg-secondary);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    margin-bottom: 0.5rem;
  }

  .showcase-content h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .showcase-content p {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.5;
  }

  .showcase-link {
    display: inline-block;
    margin-top: 0.75rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--accent-primary);
    transition: color 0.2s;
  }

  .showcase-card:hover .showcase-link {
    color: var(--text-primary);
  }

  a.showcase-card {
    display: block;
    text-decoration: none;
    color: inherit;
  }
</style>
