---
import Layout from "../../../layouts/Layout.astro";
import SubNav from "../../../components/SubNav.astro";
import FadeInOnScroll from "../../../components/FadeInOnScroll.astro";
---

<Layout title="Non-profit Sites - Sofondo Mostra">
  <SubNav variant="grouped">
    <div class="sub-nav-group sub-nav-group-primary">
      <a href="/showcase/">All</a>
    </div>
    <div class="sub-nav-group sub-nav-group-secondary">
      <a href="/showcase/free/">Free</a>
      <a href="/showcase/premium/">Premium</a>
    </div>
    <div class="sub-nav-group sub-nav-group-tertiary">
      <a href="/showcase/marketing/">Marketing</a>
      <a href="/showcase/landing/">Landing</a>
      <a href="/showcase/nonprofit/" class="active">Non-profit</a>
    </div>
  </SubNav>

  <section class="page-content" data-bg-theme="light">
    <div class="container">
      <FadeInOnScroll>
        <div class="page-header">
          <h1 class="page-title">Non-profit Examples</h1>
          <p class="page-description intro">
            Websites for charities, foundations, and mission-driven organizations.
          </p>
        </div>
      </FadeInOnScroll>

      <div class="showcase-grid">
        <FadeInOnScroll delay={0}>
          <a href="/showcase/examples/nonprofit/" class="showcase-card">
            <div class="showcase-image showcase-image--ocean">
              <span class="showcase-badge showcase-badge--free">Free</span>
            </div>
            <div class="showcase-content">
              <h2>Ocean Conservation</h2>
              <p>Non-profit site with donation forms, impact stories, and volunteer signup.</p>
              <span class="showcase-link">View Demo &rarr;</span>
            </div>
          </a>
        </FadeInOnScroll>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-content {
    padding: 2rem 0 4rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .page-description {
    font-size: 1.25rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .showcase-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .showcase-card {
    background: var(--bg-card);
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--border-color);
    transition: all 0.2s ease;
  }

  .showcase-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .showcase-image {
    height: 180px;
    background-size: cover;
    background-position: center;
    position: relative;
    display: flex;
    align-items: flex-start;
    justify-content: flex-end;
    padding: 0.75rem;
  }

  .showcase-badge {
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .showcase-badge--free {
    background: rgba(255, 255, 255, 0.9);
    color: #059669;
  }

  .showcase-badge--premium {
    background: rgba(139, 92, 246, 0.9);
    color: #ffffff;
  }

  .showcase-image--ocean {
    background: linear-gradient(135deg, #0369a1, #0284c7);
  }

  .showcase-content {
    padding: 1.5rem;
  }

  .showcase-content h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .showcase-content p {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.5;
  }

  .showcase-link {
    display: inline-block;
    margin-top: 0.75rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--accent-primary);
    transition: color 0.2s;
  }

  .showcase-card:hover .showcase-link {
    color: var(--text-primary);
  }

  a.showcase-card {
    display: block;
    text-decoration: none;
    color: inherit;
  }
</style>
