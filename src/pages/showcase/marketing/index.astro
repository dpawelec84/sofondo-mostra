---
import Layout from "../../../layouts/Layout.astro";
import SubNav from "../../../components/SubNav.astro";
import FadeInOnScroll from "../../../components/FadeInOnScroll.astro";
---

<Layout title="Marketing Sites - Sofondo Mostra">
  <SubNav variant="simple">
    <a href="/showcase/">All Projects</a>
    <a href="/showcase/marketing/" class="active">Marketing Sites</a>
    <a href="/showcase/landing/">Landing Pages</a>
  </SubNav>

  <section class="page-content" data-bg-theme="light">
    <div class="container">
      <FadeInOnScroll>
        <div class="page-header">
          <h1 class="page-title">Marketing Site Examples</h1>
          <p class="page-description intro">
            Corporate and brand website builds using this template.
          </p>
        </div>
      </FadeInOnScroll>

      <div class="showcase-grid">
        <FadeInOnScroll delay={0}>
          <div class="showcase-card">
            <div class="showcase-image showcase-image--blue"></div>
            <div class="showcase-content">
              <h3>Corporate Website</h3>
              <p>Professional business site with multiple sections and contact forms.</p>
            </div>
          </div>
        </FadeInOnScroll>

        <FadeInOnScroll delay={100}>
          <div class="showcase-card">
            <div class="showcase-image showcase-image--teal"></div>
            <div class="showcase-content">
              <h3>Agency Portfolio</h3>
              <p>Creative agency site showcasing work and team members.</p>
            </div>
          </div>
        </FadeInOnScroll>

        <FadeInOnScroll delay={200}>
          <div class="showcase-card">
            <div class="showcase-image showcase-image--purple"></div>
            <div class="showcase-content">
              <h3>Tech Startup</h3>
              <p>Modern startup site with product features and pricing.</p>
            </div>
          </div>
        </FadeInOnScroll>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-content {
    padding: 2rem 0 4rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .page-description {
    font-size: 1.25rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .showcase-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .showcase-card {
    background: var(--bg-card);
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--border-color);
    transition: all 0.2s ease;
  }

  .showcase-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .showcase-image {
    height: 180px;
    background-size: cover;
    background-position: center;
  }

  .showcase-image--blue {
    background: linear-gradient(135deg, #3b82f6, #6366f1);
  }

  .showcase-image--teal {
    background: linear-gradient(135deg, #14b8a6, #06b6d4);
  }

  .showcase-image--purple {
    background: linear-gradient(135deg, #8b5cf6, #a855f7);
  }

  .showcase-content {
    padding: 1.5rem;
  }

  .showcase-content h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .showcase-content p {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.5;
  }
</style>
