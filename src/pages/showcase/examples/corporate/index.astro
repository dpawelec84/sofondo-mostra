---
import ShowcaseLayout from "../../../../layouts/ShowcaseLayout.astro";
---

<ShowcaseLayout title="Nexus Corp - Business Consulting" returnUrl="/showcase/marketing/">
  <Fragment slot="head">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
      :root {
        --nc-primary: #1e3a5f;
        --nc-primary-dark: #152a45;
        --nc-accent: #c9a227;
        --nc-accent-light: #e6c55a;
        --nc-text: #1c1917;
        --nc-text-muted: #57534e;
        --nc-bg: #fafafa;
        --nc-bg-dark: #f5f5f4;
        --nc-white: #ffffff;
        --nc-border: #e7e5e4;
        --font-sans: 'Inter', system-ui, sans-serif;
        --font-serif: 'Playfair Display', Georgia, serif;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        scroll-behavior: smooth;
      }

      body {
        font-family: var(--font-sans);
        color: var(--nc-text);
        background: var(--nc-bg);
        line-height: 1.6;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
      }

      /* Header */
      .header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid var(--nc-border);
        z-index: 1000;
      }

      .header-inner {
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 72px;
      }

      .logo {
        font-family: var(--font-serif);
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--nc-primary);
        text-decoration: none;
      }

      .logo span {
        color: var(--nc-accent);
      }

      .nav {
        display: flex;
        gap: 2rem;
        align-items: center;
      }

      .nav a {
        color: var(--nc-text-muted);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9375rem;
        transition: color 0.2s;
      }

      .nav a:hover {
        color: var(--nc-primary);
      }

      .nav-cta {
        background: var(--nc-primary);
        color: var(--nc-white) !important;
        padding: 0.625rem 1.25rem;
        border-radius: 6px;
        transition: background 0.2s !important;
      }

      .nav-cta:hover {
        background: var(--nc-primary-dark) !important;
      }

      /* Hero */
      .hero {
        padding: 10rem 0 6rem;
        background: linear-gradient(135deg, var(--nc-primary) 0%, var(--nc-primary-dark) 100%);
        color: var(--nc-white);
        text-align: center;
      }

      .hero h1 {
        font-family: var(--font-serif);
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 600;
        margin-bottom: 1.5rem;
        line-height: 1.2;
      }

      .hero p {
        font-size: 1.25rem;
        opacity: 0.9;
        max-width: 600px;
        margin: 0 auto 2.5rem;
      }

      .hero-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
      }

      .btn {
        display: inline-flex;
        align-items: center;
        padding: 0.875rem 1.75rem;
        border-radius: 6px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s;
      }

      .btn-primary {
        background: var(--nc-accent);
        color: var(--nc-primary-dark);
      }

      .btn-primary:hover {
        background: var(--nc-accent-light);
      }

      .btn-secondary {
        background: transparent;
        color: var(--nc-white);
        border: 2px solid rgba(255, 255, 255, 0.3);
      }

      .btn-secondary:hover {
        border-color: var(--nc-white);
        background: rgba(255, 255, 255, 0.1);
      }

      /* Stats */
      .stats {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 2rem;
        padding: 4rem 0;
        text-align: center;
        background: var(--nc-white);
        border-bottom: 1px solid var(--nc-border);
      }

      .stat-item h3 {
        font-family: var(--font-serif);
        font-size: 3rem;
        font-weight: 600;
        color: var(--nc-primary);
        margin-bottom: 0.5rem;
      }

      .stat-item h3 span {
        color: var(--nc-accent);
      }

      .stat-item p {
        color: var(--nc-text-muted);
        font-size: 0.9375rem;
      }

      /* Services */
      .services {
        padding: 6rem 0;
        background: var(--nc-bg);
      }

      .section-header {
        text-align: center;
        margin-bottom: 4rem;
      }

      .section-header h2 {
        font-family: var(--font-serif);
        font-size: 2.5rem;
        font-weight: 600;
        color: var(--nc-primary);
        margin-bottom: 1rem;
      }

      .section-header p {
        color: var(--nc-text-muted);
        font-size: 1.125rem;
        max-width: 600px;
        margin: 0 auto;
      }

      .services-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
      }

      .service-card {
        background: var(--nc-white);
        padding: 2.5rem;
        border-radius: 12px;
        border: 1px solid var(--nc-border);
        transition: all 0.3s;
      }

      .service-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 40px rgba(30, 58, 95, 0.1);
      }

      .service-icon {
        width: 56px;
        height: 56px;
        background: linear-gradient(135deg, var(--nc-primary), var(--nc-primary-dark));
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
      }

      .service-icon svg {
        width: 28px;
        height: 28px;
        color: var(--nc-white);
      }

      .service-card h3 {
        font-family: var(--font-serif);
        font-size: 1.375rem;
        font-weight: 600;
        color: var(--nc-primary);
        margin-bottom: 0.75rem;
      }

      .service-card p {
        color: var(--nc-text-muted);
        font-size: 0.9375rem;
        line-height: 1.7;
      }

      /* About */
      .about {
        padding: 6rem 0;
        background: var(--nc-white);
      }

      .about-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
      }

      .about-image {
        aspect-ratio: 4/3;
        background: linear-gradient(135deg, var(--nc-primary) 0%, var(--nc-primary-dark) 100%);
        border-radius: 12px;
        position: relative;
        overflow: hidden;
      }

      .about-image::after {
        content: '';
        position: absolute;
        bottom: -20%;
        right: -20%;
        width: 60%;
        height: 60%;
        background: var(--nc-accent);
        opacity: 0.2;
        border-radius: 50%;
      }

      .about-content h2 {
        font-family: var(--font-serif);
        font-size: 2.5rem;
        font-weight: 600;
        color: var(--nc-primary);
        margin-bottom: 1.5rem;
      }

      .about-content p {
        color: var(--nc-text-muted);
        font-size: 1.0625rem;
        line-height: 1.8;
        margin-bottom: 1.5rem;
      }

      .about-features {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-top: 2rem;
      }

      .about-feature {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: var(--nc-text);
        font-weight: 500;
      }

      .about-feature svg {
        width: 20px;
        height: 20px;
        color: var(--nc-accent);
      }

      /* Testimonials */
      .testimonials {
        padding: 6rem 0;
        background: var(--nc-primary);
        color: var(--nc-white);
      }

      .testimonials .section-header h2 {
        color: var(--nc-white);
      }

      .testimonials .section-header p {
        color: rgba(255, 255, 255, 0.7);
      }

      .testimonial-card {
        background: rgba(255, 255, 255, 0.1);
        padding: 2.5rem;
        border-radius: 12px;
        backdrop-filter: blur(10px);
      }

      .testimonial-quote {
        font-size: 1.125rem;
        line-height: 1.8;
        margin-bottom: 1.5rem;
        font-style: italic;
        opacity: 0.95;
      }

      .testimonial-author {
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .testimonial-avatar {
        width: 48px;
        height: 48px;
        background: var(--nc-accent);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        color: var(--nc-primary-dark);
      }

      .testimonial-info h4 {
        font-weight: 600;
        margin-bottom: 0.25rem;
      }

      .testimonial-info p {
        font-size: 0.875rem;
        opacity: 0.7;
      }

      /* CTA */
      .cta {
        padding: 6rem 0;
        background: var(--nc-bg-dark);
        text-align: center;
      }

      .cta h2 {
        font-family: var(--font-serif);
        font-size: 2.5rem;
        font-weight: 600;
        color: var(--nc-primary);
        margin-bottom: 1rem;
      }

      .cta p {
        color: var(--nc-text-muted);
        font-size: 1.125rem;
        max-width: 600px;
        margin: 0 auto 2rem;
      }

      .cta .btn-primary {
        background: var(--nc-primary);
        color: var(--nc-white);
      }

      .cta .btn-primary:hover {
        background: var(--nc-primary-dark);
      }

      /* Footer */
      .footer {
        background: var(--nc-primary-dark);
        color: var(--nc-white);
        padding: 4rem 0 2rem;
      }

      .footer-grid {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1fr;
        gap: 3rem;
        margin-bottom: 3rem;
      }

      .footer-brand .logo {
        color: var(--nc-white);
        margin-bottom: 1rem;
        display: inline-block;
      }

      .footer-brand p {
        opacity: 0.7;
        font-size: 0.9375rem;
        line-height: 1.7;
      }

      .footer-links h4 {
        font-weight: 600;
        margin-bottom: 1.5rem;
        font-size: 0.9375rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      .footer-links a {
        display: block;
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        font-size: 0.9375rem;
        margin-bottom: 0.75rem;
        transition: color 0.2s;
      }

      .footer-links a:hover {
        color: var(--nc-accent);
      }

      .footer-bottom {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 2rem;
        text-align: center;
        opacity: 0.6;
        font-size: 0.875rem;
      }

      /* Responsive */
      @media (max-width: 968px) {
        .nav {
          display: none;
        }

        .stats {
          grid-template-columns: repeat(2, 1fr);
        }

        .services-grid {
          grid-template-columns: 1fr;
        }

        .about-grid {
          grid-template-columns: 1fr;
        }

        .footer-grid {
          grid-template-columns: 1fr 1fr;
        }
      }

      @media (max-width: 640px) {
        .stats {
          grid-template-columns: 1fr;
        }

        .about-features {
          grid-template-columns: 1fr;
        }

        .footer-grid {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </Fragment>

  <!-- Header -->
