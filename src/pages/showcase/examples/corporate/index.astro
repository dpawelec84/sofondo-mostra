  }

  .btn-cta {
    background: var(--accent-primary);
    color: #ffffff;
  }

  .btn-cta:hover {
    background: #152a45;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

