---
import ShowcaseLayout from "../../../../layouts/ShowcaseLayout.astro";
import Header from "../../../../components/Header.astro";
import Footer from "../../../../components/Footer.astro";
import { recipes } from "../../../../recipes/index";

const recipe = recipes.corporate;
---

<ShowcaseLayout title="Nexus Corp - Business Consulting" returnUrl="/showcase/marketing/" recipe="corporate">
  <Header />

  <!-- Hero - Split Layout -->
  <section class="hero">
    <div class="container hero-grid">
      <div class="hero-content">
        <span class="hero-label">Business Advisory</span>
        <h1>We transform<br><em>complexity</em> into<br>competitive advantage</h1>
        <p>Strategic consulting for organizations navigating growth, transformation, and market evolution.</p>
        <div class="hero-buttons">
          <a href="#contact" class="btn btn-primary">
            Schedule Consultation
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
          </a>
          <a href="#services" class="btn btn-ghost">Explore Services</a>
        </div>
      </div>
      <div class="hero-visual">
        <div class="data-viz">
          <div class="viz-ring viz-ring-1"></div>
          <div class="viz-ring viz-ring-2"></div>
          <div class="viz-ring viz-ring-3"></div>
          <div class="viz-center">
            <span class="viz-number">98%</span>
            <span class="viz-label">Success Rate</span>
          </div>
          <div class="viz-dot viz-dot-1"></div>
          <div class="viz-dot viz-dot-2"></div>
          <div class="viz-dot viz-dot-3"></div>
          <div class="viz-line viz-line-1"></div>
          <div class="viz-line viz-line-2"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats - Refined with visual elements -->
  <section class="stats">
    <div class="container">
      <div class="stats-grid">
        <div class="stat-item">
          <div class="stat-number" data-target="25">25</div>
          <div class="stat-suffix">+</div>
          <p class="stat-label">Years of<br>Experience</p>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <div class="stat-number" data-target="500">500</div>
          <div class="stat-suffix">+</div>
          <p class="stat-label">Global<br>Clients</p>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <div class="stat-number">$2.5</div>
          <div class="stat-suffix">B</div>
          <p class="stat-label">Revenue<br>Generated</p>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <div class="stat-number" data-target="40">40</div>
          <div class="stat-suffix">+</div>
          <p class="stat-label">Industry<br>Awards</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Services - Asymmetric Layout -->
  <section class="services" id="services">
    <div class="container">
      <div class="section-intro">
        <span class="section-label">Our Expertise</span>
        <h2>Strategic services that<br>drive measurable results</h2>
      </div>

      <div class="services-layout">
        <!-- Featured Service -->
        <div class="service-featured">
          <div class="service-featured-content">
            <span class="service-number">01</span>
            <h3>Strategic Planning & Advisory</h3>
            <p>Comprehensive strategy development that aligns organizational vision with market opportunity. We work alongside leadership teams to identify growth pathways, optimize resource allocation, and build sustainable competitive advantages.</p>
            <ul class="service-highlights">
              <li>Market positioning analysis</li>
              <li>Growth strategy development</li>
              <li>Executive decision support</li>
            </ul>
          </div>
          <div class="service-featured-visual">
            <div class="visual-bars">
              <div class="bar bar-1"></div>
              <div class="bar bar-2"></div>
              <div class="bar bar-3"></div>
              <div class="bar bar-4"></div>
              <div class="bar bar-5"></div>
            </div>
          </div>
        </div>

        <!-- Service Grid -->
        <div class="services-grid">
          <div class="service-card">
            <span class="service-number">02</span>
            <h3>Mergers & Acquisitions</h3>
            <p>End-to-end M&A advisory from target identification through post-merger integration.</p>
          </div>
          <div class="service-card">
            <span class="service-number">03</span>
            <h3>Performance Optimization</h3>
            <p>Operational efficiency programs that enhance profitability and organizational agility.</p>
          </div>
          <div class="service-card service-card-accent">
            <span class="service-number">04</span>
            <h3>Digital Transformation</h3>
            <p>Technology-enabled business model evolution for the modern enterprise.</p>
          </div>
          <div class="service-card">
            <span class="service-number">05</span>
            <h3>Risk & Compliance</h3>
            <p>Proactive risk frameworks that protect value while enabling strategic flexibility.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About - Timeline Style -->
  <section class="about" id="about">
    <div class="container">
      <div class="about-layout">
        <div class="about-intro">
          <span class="section-label">Our Story</span>
          <h2>A legacy built on trust and transformation</h2>
          <p class="about-lead">For over two decades, Nexus Corp has partnered with industry leaders to navigate complexity and unlock value. Our approach combines analytical rigor with creative problem-solving.</p>
        </div>

        <div class="milestones">
          <div class="milestone">
            <span class="milestone-year">1999</span>
            <div class="milestone-content">
              <h4>Founded</h4>
              <p>Established with a vision to redefine strategic consulting</p>
            </div>
          </div>
          <div class="milestone">
            <span class="milestone-year">2008</span>
            <div class="milestone-content">
              <h4>Global Expansion</h4>
              <p>Opened offices across 12 countries to serve multinational clients</p>
            </div>
          </div>
          <div class="milestone">
            <span class="milestone-year">2016</span>
            <div class="milestone-content">
              <h4>Digital Practice</h4>
              <p>Launched dedicated technology transformation advisory</p>
            </div>
          </div>
          <div class="milestone milestone-current">
            <span class="milestone-year">Today</span>
            <div class="milestone-content">
              <h4>Industry Leader</h4>
              <p>Recognized as a top-tier advisory firm across all major markets</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials - Multi-card Layout -->
  <section class="testimonials" id="testimonials">
    <div class="container">
      <div class="testimonials-header">
        <span class="section-label section-label-light">Client Perspectives</span>
        <h2>Trusted by leaders across industries</h2>
      </div>

      <div class="testimonials-grid">
        <div class="testimonial-card testimonial-featured">
          <blockquote>
            <p>"Nexus Corp's strategic insights were instrumental in our successful market expansion. Their team's expertise and dedication exceeded our expectations, delivering measurable results within six months."</p>
          </blockquote>
          <div class="testimonial-author">
            <div class="author-avatar">JM</div>
            <div class="author-info">
              <strong>James Mitchell</strong>
              <span>CEO, Horizon Technologies</span>
            </div>
          </div>
        </div>

        <div class="testimonial-card">
          <blockquote>
            <p>"Their M&A advisory team guided us through a complex acquisition with precision and care. Exceptional partners."</p>
          </blockquote>
          <div class="testimonial-author">
            <div class="author-avatar">SR</div>
            <div class="author-info">
              <strong>Sarah Reynolds</strong>
              <span>CFO, Meridian Group</span>
            </div>
          </div>
        </div>

        <div class="testimonial-card">
          <blockquote>
            <p>"Nexus helped us identify $40M in operational efficiencies while maintaining our commitment to quality."</p>
          </blockquote>
          <div class="testimonial-author">
            <div class="author-avatar">DK</div>
            <div class="author-info">
              <strong>David Kim</strong>
              <span>COO, Atlas Industries</span>
            </div>
          </div>
        </div>
      </div>

      <div class="client-logos">
        <span class="logos-label">Trusted by</span>
        <div class="logos-row">
          <span class="logo-placeholder">Horizon Tech</span>
          <span class="logo-placeholder">Meridian</span>
          <span class="logo-placeholder">Atlas Industries</span>
          <span class="logo-placeholder">Vertex Capital</span>
          <span class="logo-placeholder">Pinnacle Group</span>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA - Full Width -->
  <section class="cta" id="contact">
    <div class="container">
      <div class="cta-content">
        <h2>Ready to transform your organization?</h2>
        <p>Schedule a complimentary consultation with our senior advisors to discuss your strategic objectives.</p>
        <div class="cta-actions">
          <a href="#" class="btn btn-cta">
            Request Consultation
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
          </a>
          <span class="cta-note">or call <a href="tel:+1-800-555-0199">+1 (800) 555-0199</a></span>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</ShowcaseLayout>

<style>
  /* Base Styles */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: var(--font-sans);
    color: var(--text-primary);
    background: var(--bg-light);
    line-height: 1.6;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Section Labels */
  .section-label {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--accent-secondary);
    margin-bottom: 1rem;
  }

  .section-label-light {
    color: rgba(255, 255, 255, 0.6);
  }

  /* Hero - Split Layout */
  .hero {
    margin-top: calc(-1 * var(--header-height, 72px));
    padding: calc(var(--header-height, 72px) + 4rem) 0 4rem;
    background: var(--accent-primary);
    color: #ffffff;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .hero-label {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--accent-secondary);
    margin-bottom: 1.5rem;
    padding: 0.5rem 1rem;
    border: 1px solid rgba(201, 162, 39, 0.3);
    border-radius: 2px;
  }

  .hero h1 {
    font-family: var(--font-serif);
    font-size: clamp(2.5rem, 4.5vw, 3.75rem);
    font-weight: 500;
    line-height: 1.15;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .hero h1 em {
    font-style: italic;
    color: var(--accent-secondary);
  }

  .hero-content p {
    font-size: 1.125rem;
    line-height: 1.7;
    opacity: 0.85;
    max-width: 480px;
    margin-bottom: 2.5rem;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    font-size: 0.9375rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .btn-primary {
    background: var(--accent-secondary);
    color: var(--accent-primary);
  }

  .btn-primary:hover {
    background: #ddb82e;
    transform: translateX(4px);
  }

  .btn-primary svg {
    transition: transform 0.2s;
  }

  .btn-primary:hover svg {
    transform: translateX(4px);
  }

  .btn-ghost {
    color: #ffffff;
    border: 1px solid rgba(255, 255, 255, 0.25);
  }

  .btn-ghost:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.4);
  }

  /* Hero Visual - Data Visualization */
  .hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .data-viz {
    position: relative;
    width: 320px;
    height: 320px;
  }

  .viz-ring {
    position: absolute;
    border-radius: 50%;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .viz-ring-1 {
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    animation: pulse-ring 4s ease-in-out infinite;
  }

  .viz-ring-2 {
    width: 75%;
    height: 75%;
    top: 12.5%;
    left: 12.5%;
    border-color: rgba(255, 255, 255, 0.15);
    animation: pulse-ring 4s ease-in-out infinite 0.5s;
  }

  .viz-ring-3 {
    width: 50%;
    height: 50%;
    top: 25%;
    left: 25%;
    border-color: rgba(201, 162, 39, 0.3);
    animation: pulse-ring 4s ease-in-out infinite 1s;
  }

  .viz-center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    background: rgba(201, 162, 39, 0.15);
    width: 120px;
    height: 120px;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border: 2px solid var(--accent-secondary);
  }

  .viz-number {
    font-family: var(--font-serif);
    font-size: 2rem;
    font-weight: 600;
    color: var(--accent-secondary);
  }

  .viz-label {
    font-size: 0.6875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.7;
    margin-top: 0.25rem;
  }

  .viz-dot {
    position: absolute;
    width: 8px;
    height: 8px;
    background: var(--accent-secondary);
    border-radius: 50%;
    animation: float-dot 6s ease-in-out infinite;
  }

  .viz-dot-1 { top: 10%; left: 50%; animation-delay: 0s; }
  .viz-dot-2 { top: 70%; left: 15%; animation-delay: 2s; }
  .viz-dot-3 { top: 60%; right: 10%; animation-delay: 4s; }

  .viz-line {
    position: absolute;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--accent-secondary), transparent);
    opacity: 0.3;
  }

  .viz-line-1 {
    width: 60%;
    top: 35%;
    left: 20%;
    transform: rotate(-15deg);
  }

  .viz-line-2 {
    width: 40%;
    bottom: 30%;
    right: 15%;
    transform: rotate(25deg);
  }

  @keyframes pulse-ring {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.02); opacity: 0.7; }
  }

  @keyframes float-dot {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  /* Stats Section */
  .stats {
    padding: 4rem 0;
    background: #ffffff;
    border-bottom: 1px solid var(--border-color);
  }

  .stats-grid {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .stat-item {
    display: flex;
    align-items: baseline;
    gap: 0.25rem;
    flex-wrap: wrap;
    justify-content: center;
    text-align: center;
    flex: 1;
  }

  .stat-number {
    font-family: var(--font-serif);
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    font-weight: 500;
    color: var(--accent-primary);
    line-height: 1;
  }

  .stat-suffix {
    font-family: var(--font-serif);
    font-size: clamp(1.5rem, 2.5vw, 2rem);
    font-weight: 500;
    color: var(--accent-secondary);
  }

  .stat-label {
    width: 100%;
    font-size: 0.8125rem;
    color: var(--text-secondary);
    margin-top: 0.5rem;
    line-height: 1.4;
  }

  .stat-divider {
    width: 1px;
    height: 60px;
    background: var(--border-color);
  }

  /* Services Section */
  .services {
    padding: 6rem 0;
    background: var(--bg-light);
  }

  .section-intro {
    margin-bottom: 4rem;
  }

  .section-intro h2 {
    font-family: var(--font-serif);
    font-size: clamp(2rem, 3.5vw, 2.75rem);
    font-weight: 500;
    color: var(--accent-primary);
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .services-layout {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Featured Service */
  .service-featured {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 3rem;
    background: #ffffff;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 3rem;
    align-items: center;
  }

  .service-number {
    display: block;
    font-family: var(--font-serif);
    font-size: 0.875rem;
    color: var(--accent-secondary);
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .service-featured h3 {
    font-family: var(--font-serif);
    font-size: 1.75rem;
    font-weight: 500;
    color: var(--accent-primary);
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .service-featured p {
    color: var(--text-secondary);
    font-size: 1rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  .service-highlights {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .service-highlights li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.9375rem;
    color: var(--text-primary);
  }

  .service-highlights li::before {
    content: '';
    width: 6px;
    height: 6px;
    background: var(--accent-secondary);
    border-radius: 50%;
  }

  /* Visual Bars */
  .service-featured-visual {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    height: 200px;
    padding: 1rem;
  }

  .visual-bars {
    display: flex;
    gap: 12px;
    align-items: flex-end;
    height: 100%;
  }

  .bar {
    width: 32px;
    background: linear-gradient(to top, var(--accent-primary), var(--accent-secondary));
    border-radius: 4px 4px 0 0;
    animation: grow-bar 2s ease-out forwards;
  }

  .bar-1 { height: 45%; animation-delay: 0.1s; }
  .bar-2 { height: 70%; animation-delay: 0.2s; }
  .bar-3 { height: 55%; animation-delay: 0.3s; }
  .bar-4 { height: 85%; animation-delay: 0.4s; }
  .bar-5 { height: 65%; animation-delay: 0.5s; }

  @keyframes grow-bar {
    from { transform: scaleY(0); }
    to { transform: scaleY(1); }
  }

  /* Service Grid */
  .services-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }

  .service-card {
    background: #ffffff;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 2rem;
    transition: border-color 0.2s ease;
  }

  .service-card:hover {
    border-color: var(--accent-secondary);
  }

  .service-card h3 {
    font-family: var(--font-serif);
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--accent-primary);
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .service-card p {
    color: var(--text-secondary);
    font-size: 0.875rem;
    line-height: 1.7;
  }

  .service-card-accent {
    background: var(--accent-primary);
    border-color: var(--accent-primary);
  }

  .service-card-accent .service-number,
  .service-card-accent h3 {
    color: #ffffff;
  }

  .service-card-accent p {
    color: rgba(255, 255, 255, 0.8);
  }

  .service-card-accent:hover {
    border-color: var(--accent-secondary);
  }

  /* About Section */
  .about {
    padding: 6rem 0;
    background: #ffffff;
  }

  .about-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .about-intro h2 {
    font-family: var(--font-serif);
    font-size: clamp(2rem, 3.5vw, 2.75rem);
    font-weight: 500;
    color: var(--accent-primary);
    line-height: 1.2;
    letter-spacing: -0.02em;
    margin-bottom: 1.5rem;
  }

  .about-lead {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--text-secondary);
  }

  /* Milestones */
  .milestones {
    display: flex;
    flex-direction: column;
    gap: 0;
    position: relative;
  }

  .milestones::before {
    content: '';
    position: absolute;
    left: 50px;
    top: 0;
    bottom: 0;
    width: 1px;
    background: var(--border-color);
  }

  .milestone {
    display: flex;
    gap: 2rem;
    padding: 1.5rem 0;
    position: relative;
  }

  .milestone::after {
    content: '';
    position: absolute;
    left: 46px;
    top: 50%;
    transform: translateY(-50%);
    width: 9px;
    height: 9px;
    background: #ffffff;
    border: 2px solid var(--border-color);
    border-radius: 50%;
  }

  .milestone-current::after {
    background: var(--accent-secondary);
    border-color: var(--accent-secondary);
  }

  .milestone-year {
    font-family: var(--font-serif);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--accent-secondary);
    width: 50px;
    flex-shrink: 0;
    text-align: right;
  }

  .milestone-content {
    padding-left: 2rem;
  }

  .milestone-content h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--accent-primary);
    margin-bottom: 0.25rem;
  }

  .milestone-content p {
    font-size: 0.875rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  /* Testimonials */
  .testimonials {
    padding: 6rem 0;
    background: var(--accent-primary);
    color: #ffffff;
  }

  .testimonials-header {
    margin-bottom: 3rem;
  }

