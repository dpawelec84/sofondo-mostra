    margin-top: calc(-1 * var(--header-height, 72px));
    padding: calc(var(--header-height, 72px) + 5rem) 0 6rem;
    background: linear-gradient(135deg, var(--accent-primary) 0%, #152a45 100%);
    color: #ffffff;
    text-align: center;
