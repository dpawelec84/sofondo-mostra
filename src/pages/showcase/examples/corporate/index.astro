    padding: 0.875rem 1.75rem;
    border-radius: 6px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-primary {
    background: var(--accent-secondary);
    color: #152a45;
  }

  .btn-primary:hover {
    background: #e6c55a;
  }

  .btn-secondary {
    background: transparent;
    color: #ffffff;
    border: 2px solid rgba(255, 255, 255, 0.3);
  }

  .btn-secondary:hover {
    border-color: #ffffff;
    background: rgba(255, 255, 255, 0.1);
  }

  /* Stats */
  .stats {
    padding: 4rem 0;
    text-align: center;
    background: var(--bg-card);
    border-bottom: 1px solid var(--border-color);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .stat-item h3 {
    font-family: var(--font-serif);
    font-size: 3rem;
    font-weight: 600;
    color: var(--accent-primary);
    margin-bottom: 0.5rem;
  }

  .stat-item h3 span {
    color: var(--accent-secondary);
  }

  .stat-item p {
    color: var(--text-secondary);
    font-size: 0.9375rem;
  }

  /* Services */
  .services {
    padding: 6rem 0;
    background: var(--bg-light);
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h2 {
    font-family: var(--font-serif);
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--accent-primary);
    margin-bottom: 1rem;
  }

