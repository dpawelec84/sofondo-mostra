  }

  .testimonial-info h4 {
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .testimonial-info p {
    font-size: 0.875rem;
    opacity: 0.7;
  }

  /* CTA */
  .cta {
    padding: 6rem 0;
    background: var(--bg-secondary);
    text-align: center;
  }

  .cta h2 {
    font-family: var(--font-serif);
    font-size: 2.5rem;
    font-weight: 600;
