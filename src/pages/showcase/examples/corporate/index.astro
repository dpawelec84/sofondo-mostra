---
import ShowcaseLayout from "../../../../layouts/ShowcaseLayout.astro";
import ShowcaseHeader from "../../../../components/ShowcaseHeader.astro";
import ShowcaseFooter from "../../../../components/ShowcaseFooter.astro";
import { recipes } from "../../../../recipes/index";

const recipe = recipes.corporate;
const nav = [
  { label: "Services", href: "#services" },
  { label: "About", href: "#about" },
  { label: "Testimonials", href: "#testimonials" },
