---
import ShowcaseLayout from "../../../../layouts/ShowcaseLayout.astro";
import Header from "../../../../components/Header.astro";
import Footer from "../../../../components/Footer.astro";
---

<ShowcaseLayout title="Zenith - Meditation Made Simple" returnUrl="/showcase/" recipe="app-download">
  <Header />

  <!-- Hero with Animated Phone -->
  <section class="hero">
    <div class="container">
      <div class="hero-layout">
        <div class="hero-content">
          <span class="hero-badge">
            <span class="badge-icon"></span>
            4.9 Rating · 2M+ Downloads
          </span>
          <h1>Find your <em>calm</em></h1>
          <p class="hero-description">
            Guided meditations, sleep stories, and breathing exercises.
            Just 10 minutes a day to transform your mental wellness.
          </p>
          <div class="hero-downloads">
            <a href="#" class="store-btn store-btn--apple">
              <svg viewBox="0 0 24 24" fill="currentColor" width="28" height="28">
                <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
              </svg>
              <span>
                <small>Download on the</small>
                <strong>App Store</strong>
              </span>
            </a>
            <a href="#" class="store-btn store-btn--google">
              <svg viewBox="0 0 24 24" fill="currentColor" width="28" height="28">
                <path d="M3 20.5v-17c0-.59.34-1.11.84-1.35L13.69 12l-9.85 9.85c-.5-.24-.84-.76-.84-1.35zm13.81-5.38L6.05 21.34l8.49-8.49 2.27 2.27zm3.35-4.31c.34.27.59.69.59 1.19s-.22.9-.57 1.18l-2.29 1.32-2.5-2.5 2.5-2.5 2.27 1.31zM6.05 2.66l10.76 6.22-2.27 2.27-8.49-8.49z"/>
              </svg>
              <span>
                <small>Get it on</small>
                <strong>Google Play</strong>
              </span>
            </a>
          </div>
        </div>
        <div class="hero-device">
          <div class="phone-wrapper">
            <div class="phone-frame">
              <div class="phone-screen">
                <div class="screen-content screen-content--active" data-screen="home">
                  <div class="app-status-bar"></div>
                  <div class="app-greeting">
                    <span class="greeting-text">Good evening, Sarah</span>
                    <span class="greeting-date">Tuesday, Jan 14</span>
                  </div>
                  <div class="app-session">
                    <div class="session-visual">
                      <div class="session-orb"></div>
                    </div>
                    <span class="session-title">Evening Wind Down</span>
                    <span class="session-meta">10 min · Sleep</span>
                    <button class="session-play">
                      <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M6.5 4.5v11l9-5.5-9-5.5z"/>
                      </svg>
                    </button>
                  </div>
                  <div class="app-streak">
                    <span class="streak-label">Your streak</span>
                    <div class="streak-days">
                      <span class="streak-day done">M</span>
                      <span class="streak-day done">T</span>
                      <span class="streak-day done">W</span>
                      <span class="streak-day done">T</span>
                      <span class="streak-day done">F</span>
                      <span class="streak-day current">S</span>
                      <span class="streak-day">S</span>
                    </div>
                  </div>
                </div>
              </div>
              <div class="phone-notch"></div>
            </div>
            <div class="phone-glow"></div>
          </div>
          <div class="device-features">
            <div class="device-feature device-feature--left">
              <span class="feature-dot"></span>
              <span>500+ Sessions</span>
            </div>
            <div class="device-feature device-feature--right">
              <span class="feature-dot"></span>
              <span>Offline Mode</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- App Screens Showcase -->
  <section class="screens" id="features">
    <div class="container">
      <div class="section-header">
        <span class="section-tag">App Preview</span>
        <h2>Designed for <em>simplicity</em></h2>
        <p>Every interaction is crafted to help you find peace faster.</p>
      </div>

      <div class="screens-showcase">
        <div class="screen-card">
          <div class="screen-preview screen-preview--meditate">
            <div class="preview-content">
              <div class="preview-circle"></div>
              <span class="preview-time">10:00</span>
            </div>
          </div>
          <div class="screen-info">
            <h3>Meditate</h3>
            <p>Guided sessions for stress, focus, and anxiety</p>
          </div>
        </div>
        <div class="screen-card screen-card--featured">
          <div class="screen-preview screen-preview--sleep">
            <div class="preview-content">
              <div class="preview-moon"></div>
              <span class="preview-text">Drift Away</span>
            </div>
          </div>
          <div class="screen-info">
            <h3>Sleep</h3>
            <p>Stories and soundscapes for deeper rest</p>
          </div>
        </div>
        <div class="screen-card">
          <div class="screen-preview screen-preview--breathe">
            <div class="preview-content">
              <div class="preview-breath">
                <div class="breath-ring"></div>
                <div class="breath-ring"></div>
              </div>
            </div>
          </div>
          <div class="screen-info">
            <h3>Breathe</h3>
            <p>Simple exercises to calm your mind</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="features-section">
    <div class="container">
      <div class="section-header">
        <span class="section-tag">Features</span>
        <h2>Everything you need for <em>mindful living</em></h2>
      </div>

      <div class="features-grid">
        <div class="feature-item">
          <div class="feature-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="M12 6v6l4 2"/>
            </svg>
          </div>
          <div class="feature-text">
            <h4>Daily Reminders</h4>
            <p>Gentle nudges at the perfect time</p>
          </div>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2L2 7l10 5 10-5-10-5z"/>
              <path d="M2 17l10 5 10-5"/>
              <path d="M2 12l10 5 10-5"/>
            </svg>
          </div>
          <div class="feature-text">
            <h4>Progress Tracking</h4>
            <p>Visualize your mindfulness journey</p>
          </div>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4"/>
              <polyline points="7 10 12 15 17 10"/>
              <line x1="12" y1="15" x2="12" y2="3"/>
            </svg>
          </div>
          <div class="feature-text">
            <h4>Offline Access</h4>
            <p>Download sessions for anywhere</p>
          </div>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 18V5l12-2v13"/>
              <circle cx="6" cy="18" r="3"/>
              <circle cx="18" cy="16" r="3"/>
            </svg>
          </div>
          <div class="feature-text">
            <h4>Ambient Sounds</h4>
            <p>Rain, waves, forest, and more</p>
          </div>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="M23 21v-2a4 4 0 00-3-3.87"/>
              <path d="M16 3.13a4 4 0 010 7.75"/>
            </svg>
          </div>
          <div class="feature-text">
            <h4>Family Sharing</h4>
            <p>One subscription, whole family</p>
          </div>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
              <path d="M7 11V7a5 5 0 0110 0v4"/>
            </svg>
          </div>
          <div class="feature-text">
            <h4>Privacy First</h4>
            <p>Your data stays on your device</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="onboarding">
    <div class="container">
      <div class="section-header">
        <span class="section-tag">Get Started</span>
        <h2>Begin your journey in <em>3 steps</em></h2>
      </div>

      <div class="onboarding-flow">
        <div class="onboarding-step">
          <div class="step-visual">
            <div class="step-phone">
              <div class="step-screen step-screen--download"></div>
            </div>
          </div>
          <div class="step-number">1</div>
          <h3>Download Free</h3>
          <p>Get Zenith on iOS or Android. No credit card required.</p>
        </div>
        <div class="onboarding-connector">
          <svg viewBox="0 0 100 20" preserveAspectRatio="none">
            <path d="M0 10 Q50 10 100 10" stroke="currentColor" stroke-width="2" stroke-dasharray="6 4" fill="none"/>
          </svg>
        </div>
        <div class="onboarding-step">
          <div class="step-visual">
            <div class="step-phone">
              <div class="step-screen step-screen--quiz"></div>
            </div>
          </div>
          <div class="step-number">2</div>
          <h3>Take the Quiz</h3>
          <p>Answer a few questions to personalize your experience.</p>
        </div>
        <div class="onboarding-connector">
          <svg viewBox="0 0 100 20" preserveAspectRatio="none">
            <path d="M0 10 Q50 10 100 10" stroke="currentColor" stroke-width="2" stroke-dasharray="6 4" fill="none"/>
          </svg>
        </div>
        <div class="onboarding-step">
          <div class="step-visual">
            <div class="step-phone">
              <div class="step-screen step-screen--meditate"></div>
            </div>
          </div>
          <div class="step-number">3</div>
          <h3>Start Meditating</h3>
          <p>Begin with a 5-minute session. Build at your own pace.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Reviews - App Store Style -->
  <section class="reviews" id="reviews">
    <div class="container">
      <div class="section-header">
        <span class="section-tag">Reviews</span>
        <h2>Loved by <em>millions</em></h2>
      </div>

      <div class="reviews-summary">
        <div class="rating-overview">
          <span class="rating-big">4.9</span>
          <div class="rating-stars">★★★★★</div>
          <span class="rating-count">50K+ Ratings</span>
        </div>
        <div class="rating-bars">
          <div class="rating-bar">
            <span>5</span>
            <div class="bar"><div class="bar-fill" style="width: 85%"></div></div>
          </div>
          <div class="rating-bar">
            <span>4</span>
            <div class="bar"><div class="bar-fill" style="width: 10%"></div></div>
          </div>
          <div class="rating-bar">
            <span>3</span>
            <div class="bar"><div class="bar-fill" style="width: 3%"></div></div>
          </div>
          <div class="rating-bar">
            <span>2</span>
            <div class="bar"><div class="bar-fill" style="width: 1%"></div></div>
          </div>
          <div class="rating-bar">
            <span>1</span>
            <div class="bar"><div class="bar-fill" style="width: 1%"></div></div>
          </div>
        </div>
      </div>

      <div class="reviews-list">
        <div class="review-item">
          <div class="review-header">
            <div class="review-stars">★★★★★</div>
            <span class="review-title">Life changing app</span>
          </div>
          <p class="review-body">"This app has genuinely changed my life. I sleep better, feel less anxious, and have more focus throughout the day."</p>
          <div class="review-footer">
            <span class="review-author">Emma R.</span>
            <span class="review-date">2 days ago</span>
          </div>
        </div>
        <div class="review-item">
          <div class="review-header">
            <div class="review-stars">★★★★★</div>
            <span class="review-title">Perfect for beginners</span>
          </div>
          <p class="review-body">"As a skeptic of meditation apps, Zenith won me over. The interface is beautiful and the content is actually helpful."</p>
          <div class="review-footer">
            <span class="review-author">Michael T.</span>
            <span class="review-date">1 week ago</span>
          </div>
        </div>
        <div class="review-item">
          <div class="review-header">
            <div class="review-stars">★★★★★</div>
            <span class="review-title">Sleep stories are incredible</span>
          </div>
          <p class="review-body">"The sleep stories are incredible. My 7-year streak speaks for itself. Best wellness app I've ever used."</p>
          <div class="review-footer">
            <span class="review-author">Sarah K.</span>
            <span class="review-date">2 weeks ago</span>
          </div>
        </div>
      </div>

      <div class="press-mentions">
        <span class="press-label">Featured in</span>
        <div class="press-logos">
          <span>TechCrunch</span>
          <span>Forbes</span>
          <span>Wired</span>
          <span>NYTimes</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing Comparison -->
  <section class="pricing" id="pricing">
    <div class="container">
      <div class="section-header">
        <span class="section-tag">Pricing</span>
        <h2>Start free, <em>upgrade anytime</em></h2>
      </div>

      <div class="pricing-table">
        <div class="pricing-plan">
          <div class="plan-header">
            <h3>Free</h3>
            <div class="plan-price">
              <span class="price-amount">$0</span>
              <span class="price-period">Forever free</span>
            </div>
          </div>
          <ul class="plan-features">
            <li class="included">
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                <path d="M3 8l4 4 6-8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              20 guided meditations
            </li>
            <li class="included">
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                <path d="M3 8l4 4 6-8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              5 sleep stories
            </li>
            <li class="included">
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                <path d="M3 8l4 4 6-8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
