<script>
  // Interactive donation amount selector
  document.addEventListener('DOMContentLoaded', () => {
    const amountBtns = document.querySelectorAll('.amount-btn');
    const impactItems = document.querySelectorAll('.impact-item');
    const donateBtn = document.querySelector('.donate-btn');
    const donateAmount = donateBtn?.querySelector('.donate-amount');

    amountBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        // Update active button
        amountBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        // Update impact display
        const amount = btn.dataset.amount;
        impactItems.forEach(item => {
          item.classList.toggle('active', item.dataset.for === amount);
        });

        // Update donate button text
        if (donateAmount) {
          donateAmount.textContent = `$${amount}`;
        }
      });
    });
  });
</script>
