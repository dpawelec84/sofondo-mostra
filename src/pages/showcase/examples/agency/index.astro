---
import ShowcaseLayout from "../../../../layouts/ShowcaseLayout.astro";
import Header from "../../../../components/Header.astro";
import Footer from "../../../../components/Footer.astro";
import { recipes } from "../../../../recipes/index";

const recipe = recipes.agency;
---

<ShowcaseLayout title="Prism Studio - Creative Agency" returnUrl="/showcase/marketing/" recipe="agency">
  <Header />

  <!-- Hero - Typography Dominant -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <div class="hero-eyebrow">
          <span class="eyebrow-line"></span>
          <span>Creative Studio</span>
        </div>
        <h1>
          <span class="hero-line hero-line-1">We craft</span>
          <span class="hero-line hero-line-2">digital <em>experiences</em></span>
          <span class="hero-line hero-line-3">that inspire</span>
        </h1>
        <div class="hero-footer">
          <p>Award-winning creative agency specializing in brand identity, digital design, and immersive experiences.</p>
          <div class="hero-actions">
            <a href="#work" class="btn btn-primary">
              <span>View Work</span>
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                <path d="M3 8h10M9 4l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
            <a href="#contact" class="btn btn-text">Get in Touch</a>
          </div>
        </div>
      </div>
      <div class="hero-scroll-indicator">
        <span>Scroll</span>
        <div class="scroll-line"></div>
      </div>
    </div>
  </section>

  <!-- Work - Masonry/Bento Grid -->
  <section class="work" id="work">
    <div class="container">
      <div class="section-label">
        <span class="label-number">01</span>
        <span class="label-text">Selected Work</span>
      </div>

      <div class="work-bento">
        <!-- Large featured project -->
        <div class="work-item work-item--large">
          <div class="work-item-inner">
            <div class="work-item-bg work-item-bg--1"></div>
            <div class="work-item-overlay"></div>
            <div class="work-item-content">
              <span class="work-category">Brand Identity</span>
              <h3>Lumina Wellness</h3>
              <p>Complete brand transformation for a luxury wellness retreat</p>
            </div>
            <div class="work-item-index">01</div>
          </div>
        </div>

        <!-- Tall project -->
        <div class="work-item work-item--tall">
          <div class="work-item-inner">
            <div class="work-item-bg work-item-bg--2"></div>
            <div class="work-item-overlay"></div>
            <div class="work-item-content">
              <span class="work-category">E-commerce</span>
              <h3>Velo Cycling</h3>
              <p>Digital flagship store</p>
            </div>
            <div class="work-item-index">02</div>
          </div>
        </div>

        <!-- Wide project -->
        <div class="work-item work-item--wide">
          <div class="work-item-inner">
            <div class="work-item-bg work-item-bg--3"></div>
            <div class="work-item-overlay"></div>
            <div class="work-item-content">
              <span class="work-category">Web Design</span>
              <h3>Habitat Homes</h3>
              <p>Architectural portfolio</p>
            </div>
            <div class="work-item-index">03</div>
          </div>
        </div>

        <!-- Standard project -->
        <div class="work-item work-item--standard">
          <div class="work-item-inner">
            <div class="work-item-bg work-item-bg--4"></div>
            <div class="work-item-overlay"></div>
            <div class="work-item-content">
              <span class="work-category">Visual Identity</span>
              <h3>Sonica Festival</h3>
              <p>Festival branding</p>
            </div>
            <div class="work-item-index">04</div>
          </div>
        </div>
      </div>

      <a href="#" class="view-all-link">
        <span>View All Projects</span>
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M4 10h12M12 6l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    </div>
  </section>

  <!-- Services - Full Width Alternating -->
  <section class="services" id="services">
    <div class="section-label container">
      <span class="label-number">02</span>
      <span class="label-text">What We Do</span>
    </div>

    <div class="services-list">
      <div class="service-row">
        <div class="service-number">01</div>
        <div class="service-content">
          <h3>Brand Identity</h3>
          <p>Strategic brand development from naming and positioning to visual systems that resonate with your audience and stand the test of time.</p>
        </div>
        <div class="service-tags">
          <span>Strategy</span>
          <span>Logo Design</span>
          <span>Guidelines</span>
        </div>
      </div>

      <div class="service-row">
        <div class="service-number">02</div>
        <div class="service-content">
          <h3>Digital Design</h3>
          <p>User-centered websites and applications that combine exceptional aesthetics with intuitive usability and seamless performance.</p>
        </div>
        <div class="service-tags">
          <span>UI/UX</span>
          <span>Web Design</span>
          <span>Apps</span>
        </div>
      </div>

      <div class="service-row">
        <div class="service-number">03</div>
        <div class="service-content">
          <h3>Motion & Video</h3>
          <p>Compelling motion graphics and video content that tells your story with impact, from brand films to social content.</p>
        </div>
        <div class="service-tags">
          <span>Animation</span>
          <span>Video</span>
          <span>3D</span>
        </div>
      </div>

      <div class="service-row">
        <div class="service-number">04</div>
        <div class="service-content">
          <h3>Art Direction</h3>
          <p>Creative direction for campaigns, photoshoots, and visual storytelling that captures attention and communicates your message.</p>
        </div>
        <div class="service-tags">
          <span>Photography</span>
          <span>Campaigns</span>
          <span>Editorial</span>
        </div>
      </div>

      <div class="service-row">
        <div class="service-number">05</div>
        <div class="service-content">
          <h3>Development</h3>
          <p>Custom web development with clean, maintainable code, smooth animations, and optimal performance across all devices.</p>
        </div>
        <div class="service-tags">
          <span>Front-end</span>
          <span>CMS</span>
          <span>E-commerce</span>
        </div>
      </div>
    </div>
  </section>

  <!-- About/Team - Grid with Hover Reveals -->
  <section class="about" id="about">
    <div class="container">
      <div class="about-header">
        <div class="section-label">
          <span class="label-number">03</span>
          <span class="label-text">The Studio</span>
        </div>
        <h2>A collective of curious minds</h2>
        <p>Founded in 2018, Prism Studio brings together designers, developers, and strategists who believe in the power of thoughtful design to transform businesses.</p>
      </div>

      <div class="team-grid">
        <div class="team-member">
          <div class="member-photo">
            <div class="member-photo-bg"></div>
            <div class="member-info">
              <span class="member-role">Creative Director</span>
              <span class="member-links">
                <a href="#" aria-label="LinkedIn">Li</a>
                <a href="#" aria-label="Twitter">Tw</a>
              </span>
            </div>
          </div>
          <h4>Sarah Chen</h4>
        </div>

        <div class="team-member">
          <div class="member-photo">
            <div class="member-photo-bg"></div>
            <div class="member-info">
              <span class="member-role">Design Lead</span>
              <span class="member-links">
                <a href="#" aria-label="LinkedIn">Li</a>
                <a href="#" aria-label="Dribbble">Dr</a>
              </span>
            </div>
          </div>
          <h4>Marcus Webb</h4>
        </div>

        <div class="team-member">
          <div class="member-photo">
            <div class="member-photo-bg"></div>
            <div class="member-info">
              <span class="member-role">Tech Lead</span>
              <span class="member-links">
                <a href="#" aria-label="GitHub">Gh</a>
                <a href="#" aria-label="Twitter">Tw</a>
              </span>
            </div>
          </div>
          <h4>Elena Rodriguez</h4>
        </div>

        <div class="team-member">
          <div class="member-photo">
            <div class="member-photo-bg"></div>
            <div class="member-info">
              <span class="member-role">Strategy Director</span>
              <span class="member-links">
                <a href="#" aria-label="LinkedIn">Li</a>
              </span>
            </div>
          </div>
          <h4>James Park</h4>
        </div>
      </div>

      <div class="about-stats">
        <div class="stat">
          <span class="stat-number">120+</span>
          <span class="stat-label">Projects</span>
        </div>
        <div class="stat-divider"></div>
        <div class="stat">
          <span class="stat-number">15</span>
          <span class="stat-label">Team Members</span>
        </div>
        <div class="stat-divider"></div>
        <div class="stat">
          <span class="stat-number">8</span>
          <span class="stat-label">Awards</span>
        </div>
        <div class="stat-divider"></div>
        <div class="stat">
          <span class="stat-number">6</span>
          <span class="stat-label">Years</span>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA - Full Bleed with Pattern -->
  <section class="cta" id="contact">
    <div class="cta-bg">
      <div class="cta-pattern"></div>
    </div>
    <div class="container">
      <div class="cta-content">
        <span class="cta-label">Start a Project</span>
        <h2>Have a project in mind?</h2>
        <p>Let's create something extraordinary together.</p>
        <div class="cta-actions">
          <a href="mailto:hello@prismstudio.co" class="cta-email">hello@prismstudio.co</a>
          <a href="#" class="btn btn-primary btn-light">
            <span>Get in Touch</span>
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M3 8h10M9 4l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</ShowcaseLayout>

<style is:global>
  /* Override container width for Agency recipe */
  :root {
    --container-width: 1400px;
    --footer-max-width: 1400px;
  }
</style>

<style>
  /* Base Styles */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: var(--font-sans);
    color: var(--text-primary);
    background: var(--bg-light);
    line-height: 1.6;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Section Labels */
  .section-label {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .label-number {
    font-family: var(--font-mono, monospace);
    font-size: 0.75rem;
    color: var(--accent-primary);
    letter-spacing: 0.1em;
  }

  .label-text {
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--text-secondary);
  }

  /* Hero */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 0;
    position: relative;
    margin-top: calc(-1 * var(--header-height, 80px));
    padding-top: var(--header-height, 80px);
  }

  .hero .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: calc(100vh - var(--header-height, 80px));
    padding-top: 4rem;
    padding-bottom: 4rem;
  }

  .hero-content {
    max-width: 1000px;
  }

  .hero-eyebrow {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .eyebrow-line {
    width: 60px;
    height: 1px;
    background: var(--accent-primary);
  }

  .hero-eyebrow span:last-child {
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--text-secondary);
  }

  .hero h1 {
    font-family: var(--font-serif);
    font-size: clamp(3.5rem, 10vw, 8rem);
    font-weight: 300;
    line-height: 1;
    letter-spacing: -0.02em;
    margin-bottom: 3rem;
  }

  .hero-line {
    display: block;
  }

  .hero-line em {
    font-style: italic;
    color: var(--accent-primary);
  }

  .hero-footer {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    gap: 4rem;
  }

  .hero-footer p {
    max-width: 400px;
    color: var(--text-secondary);
    font-size: 1.125rem;
    line-height: 1.7;
  }

  .hero-actions {
    display: flex;
    gap: 1.5rem;
    align-items: center;
    flex-shrink: 0;
  }

  .hero-scroll-indicator {
    position: absolute;
    bottom: 3rem;
    left: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .hero-scroll-indicator span {
    font-size: 0.6875rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--text-secondary);
    writing-mode: vertical-rl;
  }

  .scroll-line {
    width: 1px;
    height: 60px;
    background: linear-gradient(to bottom, var(--accent-primary), transparent);
    animation: scroll-pulse 2s ease-in-out infinite;
  }

  @keyframes scroll-pulse {
    0%, 100% { opacity: 1; transform: scaleY(1); }
    50% { opacity: 0.5; transform: scaleY(0.8); }
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-primary {
    padding: 1rem 2rem;
    background: var(--text-primary);
    color: var(--bg-light);
    border-radius: 0;
  }

  .btn-primary:hover {
    background: var(--accent-primary);
    color: var(--text-primary);
  }

  .btn-primary svg {
    transition: transform 0.3s ease;
  }

  .btn-primary:hover svg {
    transform: translateX(4px);
  }

  .btn-text {
    color: var(--text-primary);
    position: relative;
  }

  .btn-text::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 1px;
    background: var(--text-primary);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
  }

  .btn-text:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  .btn-light {
    background: var(--bg-light);
    color: var(--text-primary);
  }

  .btn-light:hover {
    background: var(--accent-primary);
  }

  /* Work Section */
  .work {
    padding: 10rem 0;
  }

  .work-bento {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    grid-template-rows: repeat(2, 300px);
    gap: 1.5rem;
    margin-bottom: 4rem;
  }

  .work-item {
    position: relative;
    overflow: hidden;
    cursor: pointer;
  }

  .work-item--large {
    grid-column: span 7;
    grid-row: span 2;
  }

  .work-item--tall {
    grid-column: span 5;
    grid-row: span 2;
  }

  .work-item--wide {
    grid-column: span 8;
    grid-row: span 1;
  }

  .work-item--standard {
    grid-column: span 4;
    grid-row: span 1;
  }

  .work-item-inner {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .work-item-bg {
    position: absolute;
    inset: 0;
    transition: transform 0.6s ease;
  }

  .work-item:hover .work-item-bg {
    transform: scale(1.05);
  }

  .work-item-bg--1 {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
  }

  .work-item-bg--2 {
    background: linear-gradient(135deg, #2d132c 0%, #801336 50%, #c72c41 100%);
  }

  .work-item-bg--3 {
    background: linear-gradient(135deg, #0d0d0d 0%, #1a1a1a 50%, #333333 100%);
  }

  .work-item-bg--4 {
    background: linear-gradient(135deg, #1e3a5f 0%, #3d5a80 50%, #98c1d9 100%);
  }

  .work-item-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, transparent 60%);
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .work-item:hover .work-item-overlay {
    opacity: 1;
  }

  .work-item-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem;
    color: #fff;
    transform: translateY(20px);
    opacity: 0;
    transition: all 0.4s ease;
  }

  .work-item:hover .work-item-content {
    transform: translateY(0);
    opacity: 1;
  }

  .work-category {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--accent-primary);
    margin-bottom: 0.75rem;
    display: block;
  }

  .work-item h3 {
    font-family: var(--font-serif);
    font-size: 1.75rem;
    font-weight: 400;
    margin-bottom: 0.5rem;
  }

  .work-item p {
    font-size: 0.9375rem;
    color: rgba(255,255,255,0.7);
  }

  .work-item-index {
    position: absolute;
    top: 2rem;
    right: 2rem;
    font-family: var(--font-mono, monospace);
    font-size: 0.75rem;
    color: rgba(255,255,255,0.3);
    letter-spacing: 0.1em;
  }

  .view-all-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--text-primary);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .view-all-link:hover {
    color: var(--accent-primary);
  }

  .view-all-link svg {
    transition: transform 0.3s ease;
  }

  .view-all-link:hover svg {
    transform: translateX(4px);
  }

  /* Services */
  .services {
    padding: 10rem 0;
    background: var(--bg-card);
  }

  .services-list {
    border-top: 1px solid var(--border-color);
  }

  .service-row {
    display: grid;
    grid-template-columns: 100px 1fr 200px;
    gap: 4rem;
    padding: 3rem 0;
    border-bottom: 1px solid var(--border-color);
    align-items: start;
    max-width: 1400px;
    margin: 0 auto;
    padding-left: 2rem;
    padding-right: 2rem;
    transition: background 0.3s ease;
  }

  .service-row:hover {
    background: rgba(255,255,255,0.02);
  }

  .service-number {
    font-family: var(--font-mono, monospace);
    font-size: 0.875rem;
    color: var(--accent-primary);
    letter-spacing: 0.1em;
    padding-top: 0.25rem;
  }

  .service-content h3 {
    font-family: var(--font-serif);
    font-size: 2.5rem;
    font-weight: 300;
    margin-bottom: 1rem;
    transition: color 0.3s ease;
  }

  .service-row:hover .service-content h3 {
    color: var(--accent-primary);
  }

  .service-content p {
    color: var(--text-secondary);
    font-size: 1rem;
    line-height: 1.7;
    max-width: 500px;
  }

  .service-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    padding-top: 0.5rem;
  }

  .service-tags span {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-secondary);
    padding: 0.5rem 1rem;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
  }

  .service-row:hover .service-tags span {
    border-color: var(--accent-primary);
    color: var(--accent-primary);
  }

  /* About/Team */
  .about {
    padding: 10rem 0;
  }

  .about-header {
    max-width: 600px;
    margin-bottom: 5rem;
  }

  .about-header h2 {
    font-family: var(--font-serif);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 300;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .about-header p {
    color: var(--text-secondary);
    font-size: 1.125rem;
    line-height: 1.8;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin-bottom: 6rem;
  }

  .team-member {
    text-align: center;
  }

  .member-photo {
    position: relative;
    aspect-ratio: 3/4;
    margin-bottom: 1.5rem;
    overflow: hidden;
  }

  .member-photo-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--bg-secondary), var(--bg-card));
    transition: transform 0.4s ease;
  }

  .team-member:hover .member-photo-bg {
    transform: scale(1.05);
  }

  .member-info {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    background: rgba(0,0,0,0.8);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .team-member:hover .member-info {
    opacity: 1;
  }

  .member-role {
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--accent-primary);
  }

  .member-links {
    display: flex;
    gap: 1rem;
  }

  .member-links a {
    font-size: 0.75rem;
    text-transform: uppercase;
    color: #fff;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border: 1px solid rgba(255,255,255,0.3);
    transition: all 0.3s ease;
  }

  .member-links a:hover {
    border-color: var(--accent-primary);
    color: var(--accent-primary);
  }

  .team-member h4 {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 400;
  }

  .about-stats {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    padding: 4rem 0;
    border-top: 1px solid var(--border-color);
    border-bottom: 1px solid var(--border-color);
  }

  .stat {
    text-align: center;
  }

