---
import ShowcaseLayout from "../../../../layouts/ShowcaseLayout.astro";
import Header from "../../../../components/Header.astro";
import Footer from "../../../../components/Footer.astro";
import { recipes } from "../../../../recipes/index";

const recipe = recipes.startup;
---

<ShowcaseLayout title="Quantum - AI-Powered Analytics" returnUrl="/showcase/" recipe="startup">
  <Header />

  <div class="startup-site">
    <!-- Hero Section with Dashboard Preview -->
    <section class="hero">
      <div class="hero-bg">
        <div class="hero-gradient"></div>
        <div class="hero-glow"></div>
      </div>
      <div class="container">
        <div class="hero-content">
          <div class="hero-badge">
            <span class="badge-dot"></span>
            <span>Now in Public Beta</span>
          </div>
          <h1>Analytics that<br><span class="text-gradient">think ahead</span></h1>
          <p class="hero-subtitle">Quantum uses advanced AI to predict trends, identify opportunities, and automate insights—so you can make smarter decisions faster.</p>
          <div class="hero-actions">
            <a href="#" class="btn btn-primary">
              Start Free Trial
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14m-7-7 7 7-7 7"/></svg>
            </a>
            <a href="#" class="btn btn-secondary">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="5,3 19,12 5,21"/></svg>
              Watch Demo
            </a>
          </div>
        </div>

        <!-- Dashboard Preview -->
        <div class="dashboard-preview">
          <div class="dashboard-window">
            <div class="window-header">
              <div class="window-dots">
                <span></span><span></span><span></span>
              </div>
              <div class="window-title">Quantum Dashboard</div>
              <div class="window-actions"></div>
            </div>
            <div class="window-content">
              <div class="dashboard-sidebar">
                <div class="sidebar-item active">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/></svg>
                </div>
                <div class="sidebar-item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 20V10M18 20V4M6 20v-4"/></svg>
                </div>
                <div class="sidebar-item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9c.26.604.852.997 1.51 1H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z"/></svg>
                </div>
              </div>
              <div class="dashboard-main">
                <div class="metric-cards">
                  <div class="metric-card">
                    <span class="metric-label">Revenue</span>
                    <span class="metric-value">$124.5k</span>
                    <span class="metric-change positive">+12.3%</span>
                  </div>
                  <div class="metric-card">
                    <span class="metric-label">Users</span>
                    <span class="metric-value">8,420</span>
                    <span class="metric-change positive">+5.2%</span>
                  </div>
                  <div class="metric-card">
                    <span class="metric-label">Conversion</span>
                    <span class="metric-value">3.24%</span>
                    <span class="metric-change negative">-0.8%</span>
                  </div>
                </div>
                <div class="chart-area">
                  <div class="chart-header">
                    <span>Performance Overview</span>
                    <div class="chart-tabs">
                      <span class="active">7D</span>
                      <span>30D</span>
                      <span>90D</span>
                    </div>
                  </div>
                  <div class="chart-graph">
                    <svg viewBox="0 0 400 100" preserveAspectRatio="none">
                      <defs>
                        <linearGradient id="chartGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                          <stop offset="0%" style="stop-color:rgba(168,85,247,0.3)"/>
                          <stop offset="100%" style="stop-color:rgba(168,85,247,0)"/>
                        </linearGradient>
                      </defs>
                      <path class="chart-fill" d="M0,80 C50,70 80,30 120,40 C160,50 200,20 240,35 C280,50 320,25 360,30 C380,32 400,28 400,28 L400,100 L0,100 Z" fill="url(#chartGradient)"/>
                      <path class="chart-line" d="M0,80 C50,70 80,30 120,40 C160,50 200,20 240,35 C280,50 320,25 360,30 C380,32 400,28 400,28" fill="none" stroke="var(--accent-primary)" stroke-width="2"/>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Social Proof -->
    <section class="social-proof">
      <div class="container">
        <div class="proof-content">
          <div class="proof-stats">
            <div class="proof-stat">
              <span class="proof-value">10K+</span>
              <span class="proof-label">Active Users</span>
            </div>
            <div class="proof-divider"></div>
            <div class="proof-stat">
              <span class="proof-value">99.9%</span>
              <span class="proof-label">Uptime</span>
            </div>
            <div class="proof-divider"></div>
            <div class="proof-stat">
              <span class="proof-value">50M+</span>
              <span class="proof-label">Data Points/Day</span>
            </div>
          </div>
          <div class="proof-logos">
            <span class="proof-logos-label">Trusted by</span>
            <div class="logos-row">
              <span class="logo-text">TechCorp</span>
              <span class="logo-text">DataFlow</span>
              <span class="logo-text">CloudNine</span>
              <span class="logo-text">Nexus AI</span>
              <span class="logo-text">Velocity</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features - Bento Grid -->
    <section class="features" id="features">
      <div class="container">
        <div class="section-header">
          <span class="section-tag">Features</span>
          <h2>Everything you need to understand your data</h2>
          <p>Powerful tools that work together seamlessly.</p>
        </div>

        <div class="bento-grid">
          <!-- Large Feature -->
          <div class="bento-item bento-large">
            <div class="bento-content">
              <div class="feature-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 20V10M18 20V4M6 20v-4"/></svg>
              </div>
              <h3>Predictive Analytics</h3>
              <p>Our AI models analyze historical data and current trends to forecast future outcomes with remarkable accuracy. Get ahead of market shifts before they happen.</p>
            </div>
            <div class="bento-visual">
              <div class="prediction-viz">
                <div class="pred-bar" style="--h: 40%"><span>Q1</span></div>
                <div class="pred-bar" style="--h: 55%"><span>Q2</span></div>
                <div class="pred-bar" style="--h: 70%"><span>Q3</span></div>
                <div class="pred-bar predicted" style="--h: 85%"><span>Q4</span></div>
              </div>
            </div>
          </div>

          <!-- Medium Feature -->
          <div class="bento-item bento-medium">
            <div class="feature-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
            </div>
            <h3>Real-time Updates</h3>
            <p>See your metrics update instantly as new data flows in, with sub-second latency.</p>
            <div class="realtime-indicator">
              <span class="pulse-dot"></span>
              <span>Live</span>
            </div>
          </div>

          <!-- Small Features -->
          <div class="bento-item bento-small">
            <div class="feature-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2"/><path d="M3 9h18M9 21V9"/></svg>
            </div>
            <h3>Custom Dashboards</h3>
            <p>Drag-and-drop widgets and templates.</p>
          </div>

          <div class="bento-item bento-small">
            <div class="feature-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
            </div>
            <h3>Enterprise Security</h3>
            <p>SOC 2 certified, end-to-end encryption.</p>
          </div>

          <!-- Wide Feature -->
          <div class="bento-item bento-wide">
            <div class="bento-content">
              <div class="feature-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
              </div>
              <h3>Smart Alerts</h3>
              <p>Get notified about anomalies and opportunities via email, Slack, or webhooks. Set custom thresholds and never miss an important signal.</p>
            </div>
            <div class="alert-preview">
              <div class="alert-card">
                <div class="alert-icon success">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                </div>
                <div class="alert-text">
                  <strong>Revenue target reached</strong>
                  <span>$100k milestone achieved</span>
                </div>
              </div>
              <div class="alert-card">
                <div class="alert-icon warning">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/><line x1="12" y1="9" x2="12" y2="13"/><line x1="12" y1="17" x2="12.01" y2="17"/></svg>
                </div>
                <div class="alert-text">
                  <strong>Anomaly detected</strong>
                  <span>Traffic spike on /checkout</span>
                </div>
              </div>
            </div>
          </div>

          <div class="bento-item bento-small">
            <div class="feature-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9c.26.604.852.997 1.51 1H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z"/></svg>
            </div>
            <h3>API Access</h3>
            <p>REST and GraphQL APIs included.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works -->
    <section class="how-it-works">
      <div class="container">
        <div class="section-header">
          <span class="section-tag">How It Works</span>
          <h2>Up and running in minutes</h2>
        </div>

        <div class="process-flow">
          <div class="process-step">
            <div class="step-visual">
              <div class="step-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/></svg>
              </div>
              <div class="step-number">01</div>
            </div>
            <div class="step-content">
              <h3>Connect Your Data</h3>
              <p>Integrate with 100+ data sources including databases, APIs, spreadsheets, and cloud services.</p>
              <div class="integrations">
                <span class="integration">PostgreSQL</span>
                <span class="integration">MongoDB</span>
                <span class="integration">+98 more</span>
              </div>
            </div>
          </div>

          <div class="process-connector"></div>

          <div class="process-step">
            <div class="step-visual">
              <div class="step-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 20V10M18 20V4M6 20v-4"/></svg>
              </div>
              <div class="step-number">02</div>
            </div>
            <div class="step-content">
              <h3>Configure Metrics</h3>
              <p>Define the KPIs that matter to your business using our intuitive query builder or SQL.</p>
              <div class="code-preview">
                <code>SELECT revenue, date FROM sales</code>
              </div>
            </div>
          </div>

          <div class="process-connector"></div>

          <div class="process-step">
            <div class="step-visual">
              <div class="step-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4M12 8h.01"/></svg>
              </div>
              <div class="step-number">03</div>
            </div>
            <div class="step-content">
              <h3>Get Insights</h3>
              <p>Let our AI analyze your data and surface actionable insights automatically.</p>
              <div class="insight-tag">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                AI-powered recommendations
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Pricing -->
    <section class="pricing" id="pricing">
      <div class="container">
        <div class="section-header">
          <span class="section-tag">Pricing</span>
          <h2>Simple, transparent pricing</h2>
          <p>No hidden fees. Cancel anytime.</p>
        </div>

        <div class="pricing-layout">
          <div class="pricing-card">
            <div class="pricing-header">
              <h3>Starter</h3>
              <p>For individuals and small teams</p>
            </div>
            <div class="pricing-price">
              <span class="price-amount">$29</span>
              <span class="price-period">/month</span>
            </div>
            <ul class="pricing-features">
              <li>Up to 5 team members</li>
              <li>10 data sources</li>
              <li>Basic analytics</li>
              <li>Email support</li>
            </ul>
            <a href="#" class="btn btn-outline">Get Started</a>
          </div>

          <div class="pricing-card pricing-featured">
            <div class="pricing-badge">Most Popular</div>
            <div class="pricing-header">
              <h3>Pro</h3>
              <p>For growing businesses</p>
            </div>
            <div class="pricing-price">
              <span class="price-amount">$99</span>
              <span class="price-period">/month</span>
            </div>
            <ul class="pricing-features">
              <li><strong>Everything in Starter, plus:</strong></li>
              <li>Up to 20 team members</li>
              <li>Unlimited data sources</li>
              <li>Advanced AI analytics</li>
              <li>Priority support</li>
              <li>API access</li>
            </ul>
            <a href="#" class="btn btn-primary">Get Started</a>
          </div>

          <div class="pricing-card">
            <div class="pricing-header">
              <h3>Enterprise</h3>
              <p>For large organizations</p>
            </div>
            <div class="pricing-price">
              <span class="price-amount">Custom</span>
            </div>
            <ul class="pricing-features">
              <li><strong>Everything in Pro, plus:</strong></li>
              <li>Unlimited team members</li>
              <li>Custom AI models</li>
              <li>Dedicated support</li>
              <li>SLA guarantee</li>
              <li>On-premise deployment</li>
            </ul>
            <a href="#" class="btn btn-outline">Contact Sales</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials -->
    <section class="testimonials">
      <div class="container">
        <div class="section-header">
          <span class="section-tag">Testimonials</span>
          <h2>Loved by data teams everywhere</h2>
        </div>

        <div class="testimonials-masonry">
          <div class="testimonial-card testimonial-large">
            <div class="testimonial-content">
              <p>"Quantum has transformed how we approach data analysis. The AI predictions have helped us identify trends weeks before our competitors. It's not just analytics—it's a competitive advantage."</p>
            </div>
            <div class="testimonial-author">
              <div class="author-avatar">SM</div>
              <div class="author-info">
                <strong>Sarah Mitchell</strong>
                <span>VP of Analytics, TechCorp</span>
              </div>
            </div>
          </div>

          <div class="testimonial-card">
            <div class="testimonial-content">
              <p>"The setup was incredibly smooth. We had our first dashboard running within an hour."</p>
            </div>
            <div class="testimonial-author">
              <div class="author-avatar">JC</div>
              <div class="author-info">
                <strong>James Chen</strong>
                <span>Data Lead, DataFlow</span>
              </div>
            </div>
          </div>

          <div class="testimonial-card">
            <div class="testimonial-content">
              <p>"Finally, an analytics platform that doesn't require a PhD to use. Our entire team can now access and understand our metrics."</p>
            </div>
            <div class="testimonial-author">
              <div class="author-avatar">AL</div>
              <div class="author-info">
                <strong>Amanda Lee</strong>
                <span>CEO, Velocity</span>
              </div>
            </div>
          </div>

          <div class="testimonial-card">
            <div class="testimonial-content">
              <p>"The real-time alerts have saved us from two potential outages this quarter alone."</p>
            </div>
            <div class="testimonial-author">
              <div class="author-avatar">MR</div>
              <div class="author-info">
                <strong>Mike Rodriguez</strong>
                <span>CTO, CloudNine</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-card">
          <div class="cta-content">
            <h2>Ready to unlock your data's potential?</h2>
            <p>Start your 14-day free trial today. No credit card required.</p>
          </div>
          <div class="cta-actions">
            <a href="#" class="btn btn-primary btn-large">
              Start Free Trial
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14m-7-7 7 7-7 7"/></svg>
            </a>
            <a href="#" class="btn btn-ghost">Talk to Sales</a>
          </div>
        </div>
      </div>
    </section>
  </div>

  <Footer />
</ShowcaseLayout>

<style>
  /* Base */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .startup-site {
    font-family: var(--font-sans);
    background: var(--bg-light);
    color: var(--text-primary);
    line-height: 1.6;
    overflow-x: hidden;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  h1, h2, h3, h4 {
    font-family: var(--font-serif);
    font-weight: 600;
    line-height: 1.2;
  }

  .text-gradient {
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary), #3b82f6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-tag {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    background: rgba(168, 85, 247, 0.1);
    border: 1px solid rgba(168, 85, 247, 0.2);
    border-radius: 100px;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent-primary);
    margin-bottom: 1rem;
  }

  .section-header h2 {
    font-size: clamp(1.75rem, 3.5vw, 2.5rem);
    margin-bottom: 0.75rem;
  }

  .section-header p {
    color: var(--text-secondary);
    font-size: 1.125rem;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 500;
    font-size: 0.9375rem;
    text-decoration: none;
    transition: all 0.2s;
    border: none;
    cursor: pointer;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(168, 85, 247, 0.4);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.15);
  }

  .btn-outline {
    background: transparent;
    color: var(--text-primary);
    border: 1px solid var(--border-color);
  }

