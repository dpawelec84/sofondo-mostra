<script>
  // Color picker interaction
  const colorOptions = document.querySelectorAll('.color-option');
  const previewFabric = document.querySelector('.preview-fabric');

  colorOptions.forEach(option => {
    option.addEventListener('click', () => {
      colorOptions.forEach(opt => opt.classList.remove('active'));
      option.classList.add('active');

      const hex = option.getAttribute('data-hex');
      if (previewFabric && hex) {
        (previewFabric as HTMLElement).style.background = hex;
      }
    });
  });

  // Simple product rotation on drag (mouse/touch)
  const productSpeaker = document.getElementById('productSpeaker');
  let isDragging = false;
  let startX = 0;
  let currentRotation = 0;

  if (productSpeaker) {
    productSpeaker.addEventListener('mousedown', (e) => {
      isDragging = true;
      startX = e.clientX;
    });

    document.addEventListener('mousemove', (e) => {
      if (!isDragging) return;
      const deltaX = e.clientX - startX;
      currentRotation = deltaX * 0.5;
      productSpeaker.style.transform = `rotateY(${currentRotation}deg)`;
    });

    document.addEventListener('mouseup', () => {
      isDragging = false;
    });
  }
</script>
